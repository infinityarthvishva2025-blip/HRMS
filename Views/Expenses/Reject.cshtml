@model HRMS.Models.Expenses
@{
    ViewData["Title"] = "Reject Expense";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h4>Reject Expense</h4>
        </div>
        <div class="card-body">
            <h5 class="text-secondary">Are you sure you want to reject this expense?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Expense Type</dt>
                <dd class="col-sm-9">@Model.ExpenseType</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Reject" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">❌ Reject</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
