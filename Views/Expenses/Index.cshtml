@model IEnumerable<HRMS.Models.Expenses>

@{
    ViewData["Title"] = "Expense List";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Expense List</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Add New Expense
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Expense Type</th>
                    <th>Amount (₹)</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Proof</th>
                    <th style="width:200px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ExpenseType</td>
                        <td>@item.Amount.ToString("N2")</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (item.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pending</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ProofFilePath))
                            {
                                <a href="@Url.Content(item.ProofFilePath)" target="_blank" class="btn btn-sm btn-outline-info">
                                    View Proof
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No File</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>

                                <form asp-action="Approve" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                </form>

                                <form asp-action="Reject" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-secondary">Reject</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No expenses found.</div>
    }
</div>
