@model HRMS.Models.Expenses
@{
    ViewData["Title"] = "Delete Expenses";
}

<h2 class="text-center text-danger mb-4">🗑️ Delete Expense</h2>

<div class="container shadow p-4 rounded bg-light">
    <h4>Are you sure you want to delete this expense?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Expense Type</dt>
        <dd class="col-sm-9">@Model.ExpenseType</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="text-center">
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
