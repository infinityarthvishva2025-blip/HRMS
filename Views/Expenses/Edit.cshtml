@model HRMS.Models.Expenses
@{
    ViewData["Title"] = "Edit Expense";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark text-center">
            <h4>Edit Expense</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="ExpenseType" class="form-label">Expense Type</label>
                    <input asp-for="ExpenseType" class="form-control" />
                    <span asp-validation-for="ExpenseType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="form-label">Amount</label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <!-- 📎 File Upload Section -->
                <div class="form-group mb-3">
                    <label class="form-label">Upload New Proof (optional)</label>
                    <input type="file" name="ExpenseProof" class="form-control" />
                    <small class="text-muted">Leave empty to keep existing proof</small>

                    @if (!string.IsNullOrEmpty(Model.ProofFilePath))
                    {
                        <div class="mt-2">
                            <a href="@Model.ProofFilePath" target="_blank" class="btn btn-outline-info btn-sm">
                                View Current Proof
                            </a>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                    <button type="submit" class="btn btn-warning px-4">Update Expense</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
