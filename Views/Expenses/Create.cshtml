@model HRMS.Models.Expenses

@{
    ViewData["Title"] = "Add Expense";
    Layout = "_EmployeeLayout";
}

<!-- TOP BAR WITH TITLE + BUTTON -->
<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    <h2>Add Expense</h2>

    <a asp-controller="Expenses" asp-action="Index" class="btn btn-primary">
        My Expenses
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Create" asp-controller="Expenses" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <!-- DEFAULT STATUS -->
    <input type="hidden" name="Status" value="Pending" />

    <div class="form-group mb-3">
        <label>Expense Type</label>
        <select class="form-control" asp-for="ExpenseType" required>
            <option value="">-- Select Expense Type --</option>
            <option value="Travel">Travel</option>
            <option value="Food">Food</option>
            <option value="Office Supplies">Office Supplies</option>
            <option value="Maintenance">Maintenance</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="ExpenseType" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Amount (₹)</label>
        <input asp-for="Amount" type="number" class="form-control" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Date</label>
        <input asp-for="Date" type="date" class="form-control" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Description (optional)</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label>Proof File (optional)</label>
        <input type="file" name="ProofFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
