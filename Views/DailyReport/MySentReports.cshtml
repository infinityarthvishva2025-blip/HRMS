@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<HRMS.Models.DailyReport>

@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role") ?? "Employee";
    role = string.IsNullOrWhiteSpace(role) || role == "-" ? "Employee" : role;

    Layout = (role == "HR" || role == "GM" || role == "VP" || role == "Director")
        ? "~/Views/Shared/_HrLayout.cshtml"
        : "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container-fluid">

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="fa-solid fa-paper-plane me-2"></i>
            <h5 class="mb-0">My Sent Daily Reports</h5>
        </div>

        <div class="card-body p-0">

            <!-- ================= DESKTOP TABLE ================= -->
            <div class="table-responsive d-none d-md-block">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Today's Work</th>
                            <th>Pending</th>
                            <th>Issues</th>
                            <th class="text-center">Recipients</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            var total = r.Recipients?.Count() ?? 0;
                            var read = r.Recipients?.Count(x => x.IsRead) ?? 0;
                            var unread = total - read;
                            var modalId = $"recipientsModal_{r.ReportId}";

                            <tr>
                                <td>
                                    <strong>@r.CreatedDate.ToString("dd MMM yyyy")</strong><br />
                                    <small class="text-muted">@r.CreatedDate.ToString("hh:mm tt")</small>
                                </td>

                                <td>@r.TodaysWork</td>
                                <td>@r.PendingWork</td>
                                <td>@r.Issues</td>

                                <td class="text-center">
                                    @if (total > 0)
                                    {
                                        <span class="badge bg-success me-1">
                                            ✔ @read Read
                                        </span>
                                        <span class="badge bg-warning text-dark me-2">
                                            ⏳ @unread Unread
                                        </span>

                                        <button class="btn btn-sm btn-outline-primary"
                                                data-bs-toggle="modal"
                                                data-bs-target="#@modalId">
                                            View
                                        </button>

                                        <!-- ================= MODAL ================= -->
                                        <div class="modal fade" id="@modalId" tabindex="-1">
                                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                                <div class="modal-content">

                                                    <div class="modal-header bg-primary text-white">
                                                        <h6 class="modal-title">
                                                            Report Recipients
                                                        </h6>
                                                        <button type="button"
                                                                class="btn-close btn-close-white"
                                                                data-bs-dismiss="modal"></button>
                                                    </div>

                                                    <div class="modal-body">
                                                        @foreach (var rec in r.Recipients)
                                                        {
                                                            <div class="d-flex justify-content-between align-items-center
                                                                                    border rounded p-2 mb-2">
                                                                <div>
                                                                    <strong>@rec.Receiver?.Name</strong><br />
                                                                    <small class="text-muted">
                                                                        @rec.Receiver?.Role
                                                                    </small>
                                                                </div>

                                                                @if (rec.IsRead)
                                                                {
                                                                    <span class="badge bg-success">
                                                                        ✔ Read
                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-warning text-dark">
                                                                        ⏳ Unread
                                                                    </span>
                                                                }
                                                            </div>
                                                        }
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- ================= MOBILE VIEW ================= -->
            <div class="d-block d-md-none p-3">
                @foreach (var r in Model)
                {
                    var total = r.Recipients?.Count() ?? 0;
                    var read = r.Recipients?.Count(x => x.IsRead) ?? 0;
                    var unread = total - read;
                    var modalId = $"recipientsModalMobile_{r.ReportId}";

                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">

                            <div class="mb-2">
                                <strong>Date:</strong><br />
                                @r.CreatedDate.ToString("dd MMM yyyy, hh:mm tt")
                            </div>

                            <div class="mb-2">
                                <strong>Today's Work:</strong>
                                <div class="text-muted">@r.TodaysWork</div>
                            </div>

                            <div class="mb-2">
                                <strong>Pending:</strong>
                                <div class="text-muted">@r.PendingWork</div>
                            </div>

                            <div class="mb-2">
                                <strong>Issues:</strong>
                                <div class="text-muted">@r.Issues</div>
                            </div>

                            <div>
                                <strong>Recipients:</strong><br />

                                @if (total > 0)
                                {
                                    <span class="badge bg-success me-1">
                                        ✔ @read
                                    </span>
                                    <span class="badge bg-warning text-dark me-2">
                                        ⏳ @unread
                                    </span>

                                    <button class="btn btn-sm btn-outline-primary mt-2"
                                            data-bs-toggle="modal"
                                            data-bs-target="#@modalId">
                                        View Details
                                    </button>

                                    <!-- MOBILE MODAL -->
                                    <div class="modal fade" id="@modalId" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                            <div class="modal-content">

                                                <div class="modal-header bg-primary text-white">
                                                    <h6 class="modal-title">
                                                        Report Recipients
                                                    </h6>
                                                    <button type="button"
                                                            class="btn-close btn-close-white"
                                                            data-bs-dismiss="modal"></button>
                                                </div>

                                                <div class="modal-body">
                                                    @foreach (var rec in r.Recipients)
                                                    {
                                                        <div class="d-flex justify-content-between align-items-center
                                                                                border rounded p-2 mb-2">
                                                            <div>
                                                                <strong>@rec.Receiver?.Name</strong><br />
                                                                <small class="text-muted">
                                                                    @rec.Receiver?.Role
                                                                </small>
                                                            </div>

                                                            @if (rec.IsRead)
                                                            {
                                                                <span class="badge bg-success">
                                                                    ✔ Read
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-warning text-dark">
                                                                    ⏳ Unread
                                                                </span>
                                                            }
                                                        </div>
                                                    }
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </div>

                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

</div>
