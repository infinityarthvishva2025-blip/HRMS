@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model HRMS.ViewModels.DailyReportViewModel

@{
    Layout = "_EmployeeLayout";
}

<div class="container-fluid daily-report-wrapper">

    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10 col-md-12">

            <div class="card report-card">

                <!-- HEADER -->
                <div class="card-header report-header">
                    <div>
                        <h4 class="mb-1">
                            <i class="fa-solid fa-clipboard-check me-2"></i>
                            Daily Work Report
                        </h4>
                        <small class="text-light opacity-75">
                            Submit your daily progress and updates
                        </small>
                    </div>
                </div>

                <!-- BODY -->
                <div class="card-body p-4">

                    <form asp-action="Send"
                          asp-controller="DailyReport"
                          method="post"
                          novalidate>

                        @Html.AntiForgeryToken()

                        <!-- GLOBAL WARNING -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-warning mb-4">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                Please fill all mandatory fields before submitting the report.
                            </div>
                        }

                        <!-- SECTION : WORK -->
                        <div class="section-box">
                            <h6 class="section-title">
                                <i class="fa-solid fa-briefcase me-2"></i>
                                Work Summary
                            </h6>

                            <!-- Today's Work -->
                            <div class="mb-3">
                                <label class="form-label">
                                    Today's Work <span class="text-danger">*</span>
                                </label>
                                <textarea asp-for="TodaysWork"
                                          class="form-control form-control-lg"
                                          rows="4"
                                          placeholder="Describe the tasks completed today..."></textarea>
                                <span asp-validation-for="TodaysWork" class="text-danger small"></span>
                            </div>

                            <!-- Pending Work -->
                            <div class="mb-3">
                                <label class="form-label">
                                    Pending Work <span class="text-danger">*</span>
                                </label>
                                <textarea asp-for="PendingWork"
                                          class="form-control"
                                          rows="3"
                                          placeholder="Mention work that is still pending..."></textarea>
                                <span asp-validation-for="PendingWork" class="text-danger small"></span>
                            </div>

                            <!-- Issues -->
                            <div class="mb-0">
                                <label class="form-label">
                                    Issues / Challenges <span class="text-danger">*</span>
                                </label>
                                <textarea asp-for="Issues"
                                          class="form-control"
                                          rows="3"
                                          placeholder="Any blockers, delays, or issues faced..."></textarea>
                                <span asp-validation-for="Issues" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- SECTION : RECIPIENTS -->
                        <div class="section-box mt-4">
                            <h6 class="section-title">
                                <i class="fa-solid fa-users me-2"></i>
                                Select Recipients <span class="text-danger">*</span>
                            </h6>

                            <div class="recipient-container">
                                @foreach (var item in Model.RecipientList)
                                {
                                    <label class="recipient-item">
                                        <input type="checkbox"
                                               name="SelectedRecipientIds"
                                               value="@item.Value" />
                                        <span class="recipient-name">
                                            @item.Text
                                        </span>
                                    </label>
                                }
                            </div>

                            <span class="text-danger small mt-2 d-block">
                                @Html.ValidationMessageFor(m => m.SelectedRecipientIds)
                            </span>
                        </div>

                        <!-- ACTIONS -->
                        <div class="action-bar mt-4">
                            <button type="submit" class="btn btn-submit">
                                <i class="fa-solid fa-paper-plane me-2"></i>
                                Submit Report
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* ===== WRAPPER ===== */
    .daily-report-wrapper {
        padding-top: 30px;
        padding-bottom: 30px;
    }

    /* ===== CARD ===== */
    .report-card {
        border-radius: 14px;
        border: none;
        box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    }

    /* ===== HEADER ===== */
    .report-header {
        background: linear-gradient(135deg, #2F3D88, #4A5FC1);
        color: #fff;
        padding: 20px 25px;
        border-radius: 14px 14px 0 0;
    }

    /* ===== SECTION ===== */
    .section-box {
        background: #f9fafb;
        border-radius: 12px;
        padding: 20px;
    }

    .section-title {
        font-weight: 700;
        margin-bottom: 15px;
        color: #2F3D88;
    }

    /* ===== FORM ===== */
    .form-label {
        font-weight: 600;
        color: #374151;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #d1d5db;
    }

        .form-control:focus {
            border-color: #4A5FC1;
            box-shadow: 0 0 0 0.15rem rgba(74,95,193,0.25);
        }

    /* ===== VALIDATION ===== */
    .input-validation-error {
        border-color: #dc2626 !important;
    }

    /* ===== RECIPIENTS ===== */
    .recipient-container {
        max-height: 220px;
        overflow-y: auto;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 10px;
    }

    .recipient-item {
        display: flex;
        align-items: center;
        gap: 10px;
        background: #fff;
        border: 1px solid #e5e7eb;
        padding: 10px 14px;
        border-radius: 10px;
        cursor: pointer;
        transition: all .2s ease;
    }

        .recipient-item:hover {
            border-color: #4A5FC1;
            background: #eef2ff;
        }

        .recipient-item input {
            transform: scale(1.1);
        }

    .recipient-name {
        font-weight: 600;
        color: #1f2937;
    }

    /* ===== ACTION BAR ===== */
    .action-bar {
        display: flex;
        justify-content: flex-end;
    }

    .btn-submit {
        background: linear-gradient(135deg, #2F3D88, #4A5FC1);
        color: #fff;
        border: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 700;
        transition: all .25s ease;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(74,95,193,0.35);
        }

    /* ===== MOBILE ===== */
    @@media (max-width: 576px) {
        .recipient-container {
            grid-template-columns: 1fr;
        }

        .btn-submit {
            width: 100%;
            text-align: center;
        }
    }
</style>
