@model IEnumerable<HRMS.Models.Announcement>
@{
    Layout = "_EmployeeLayout";

    int empId = ViewBag.EmployeeId;

    Func<HRMS.Models.Announcement, bool> isRead = (a) =>
    {
        if (string.IsNullOrEmpty(a.ReadByEmployees))
            return false;
        return a.ReadByEmployees.Split(',').Contains(empId.ToString());
    };

    // 🔥 SHOW ONLY UNREAD NOTIFICATIONS
    var unreadList = Model.Where(a => !isRead(a)).ToList();
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .notif-header {
        font-weight: 800;
        color: #1a237e;
        font-size: 28px;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 25px;
    }

    .notif-card {
        background: #ffffff;
        border-radius: 14px;
        padding: 20px 22px;
        margin-bottom: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        border-left: 6px solid #1e40af;
        transition: .25s ease;
        position: relative;
    }

        /* 🔴 URGENT STYLE */
        .notif-card.urgent {
            background: #fff1f2;
            border-left-color: #dc2626;
        }

        .notif-card.unread {
            background: #fff7e5;
            border-left-color: #ff9800;
        }

    .notif-title {
        font-size: 19px;
        font-weight: 700;
        color: #0f1d63;
        margin-bottom: 6px;
    }

    .notif-message {
        font-size: 15.5px;
        color: #444;
        margin-bottom: 10px;
        line-height: 1.5;
    }

    .notif-date {
        font-size: 13.5px;
        color: #666;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .urgent-badge {
        background: #dc2626;
        color: white;
        font-size: 12px;
        padding: 4px 10px;
        border-radius: 20px;
        font-weight: 600;
        position: absolute;
        top: 16px;
        right: 18px;
    }

    .mark-read-btn {
        background: #2563eb;
        color: white;
        padding: 7px 16px;
        border-radius: 8px;
        font-size: 13px;
        text-decoration: none;
        transition: 0.2s;
        float: right;
        margin-top: -35px;
    }

    .empty-box {
        background: #eef2ff;
        padding: 35px;
        border-radius: 12px;
        text-align: center;
        color: #5a5c6c;
        font-size: 16px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
</style>

<div class="container mt-4">

    <h3 class="notif-header">
        <i class="fa-solid fa-bell text-warning"></i> My Notifications
    </h3>

    @if (!unreadList.Any())
    {
        <div class="empty-box">
            <i class="fa-solid fa-circle-check fa-2x mb-2 text-success"></i>
            <p>All caught up! No unread notifications.</p>
        </div>
    }
    else
    {
        foreach (var a in unreadList)
        {
            <div class="notif-card unread @(a.IsUrgent ? "Very Important!!!" : "")">

                @* 🔴 URGENT LABEL *@
                @if (a.IsUrgent)
                {
                    <span class="urgent-badge">
                        🚨 Very Important!! 
                    </span>
                }

                <div class="notif-title">@a.Title</div>

                <div class="notif-message">@a.Message</div>

                <div class="notif-date">
                    <i class="fa-regular fa-calendar"></i>
                    @a.CreatedOn.AddHours(5).AddMinutes(30).ToString("dd MMM yyyy, hh:mm tt")
                    
                </div>

                <a href="/Announcements/Read/@a.Id" class="mark-read-btn">
                    Mark as Read
                </a>
            </div>
        }
    }

</div>
