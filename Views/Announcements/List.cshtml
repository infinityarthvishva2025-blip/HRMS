@model IEnumerable<HRMS.Models.Announcement>
@{
    Layout = "_HrLayout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        flex-wrap: wrap; /* FIX FOR MOBILE */
    }

        .page-header h2 {
            font-weight: 800;
            color: #1a237e;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px; /* FIX SPACING ON MOBILE */
        }

    .btn-create {
        background: #3949ab;
        padding: 10px 20px;
        color: #fff;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.2s;
        white-space: nowrap;
    }

        .btn-create:hover {
            background: #303f9f;
            color: #fff;
        }

    .card-container {
        background: #ffffff;
        padding: 25px;
        border-radius: 14px;
        box-shadow: 0 4px 18px rgba(0,0,0,0.08);
    }

    /* Responsive scrollable table */
    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    table {
        width: 100%;
        border-collapse: separate !important;
        border-spacing: 0 10px;
        min-width: 650px; /* AVOID SQUEEZING */
    }

    thead tr {
        background: #1a237e !important;
        color: #fff;
    }

    thead th {
        padding: 14px;
        font-size: 15px;
        font-weight: 600;
        border: none;
        white-space: nowrap;
    }

    tbody tr {
        background: #f4f6ff;
        border-radius: 10px;
        transition: 0.2s;
    }

        tbody tr:hover {
            background: #e8eaff;
            transform: scale(1.01);
        }

    tbody td {
        padding: 14px;
        vertical-align: middle;
        border: none;
        color: #333;
        font-size: 15px;
    }

    .delete-btn {
        background: #e53935;
        padding: 6px 14px;
        color: white;
        border-radius: 6px;
        font-size: 13px;
        text-decoration: none;
        transition: 0.2s;
        white-space: nowrap;
    }

        .delete-btn:hover {
            background: #b71c1c;
            color: #fff;
        }

    .delete-all-btn {
        background: #d32f2f;
        padding: 10px 20px;
        color: white !important;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.2s;
        white-space: nowrap;
    }

        .delete-all-btn:hover {
            background: #b71c1c;
        }

    .empty-box {
        text-align: center;
        padding: 40px;
        font-size: 16px;
        color: #777;
    }

    /* ================= MOBILE RESPONSIVE FIXES ================= */

    @@media (max-width: 768px) {

        .page-header {
            flex-direction: column;
            text-align: center;
            gap: 10px;
        }

        .delete-all-btn {
            width: 100%;
            text-align: center;
        }

        .btn-create {
            width: 100%;
            text-align: center;
            margin-top: 5px;
        }
    }

    @@media (max-width: 480px) {

        .card-container {
            padding: 15px;
        }

        .page-header h2 {
            font-size: 20px;
        }

        tbody td {
            font-size: 14px;
        }
    }
</style>


<div class="page-header">
    <h2>
        <i class="fa-solid fa-bullhorn text-primary"></i> All Announcements
    </h2>

    <a href="/Announcements/Create" class="btn-create">
        <i class="fa-solid fa-plus"></i> New Announcement
    </a>
</div>

<div class="d-flex justify-content-end mb-3">
    <a href="/Announcements/DeleteAll"
       class="delete-all-btn"
       onclick="return confirm('⚠️ Are you sure you want to delete ALL announcements?')">
        <i class="fa-solid fa-trash"></i> Delete All
    </a>
</div>

<div class="card-container">

    @if (!Model.Any())
    {
        <div class="empty-box">
            <i class="fa-solid fa-circle-info fa-2x text-secondary"></i>
            <p class="mt-2">No announcements found.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">

            <table>
                <thead>
                    <tr>
                        <th style="width: 20%;">Title</th>
                        <th style="width: 45%;">Message</th>
                        <th style="width: 20%;">Created On</th>
                        <th style="width: 15%;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.Title</td>

                            <td>@a.Message</td>

                            <td>
                                @a.CreatedOn.ToString("dd-MM-yyyy hh:mm tt")
                            </td>

                            <td>
                                <a href="/Announcements/Delete/@a.Id"
                                   class="delete-btn"
                                   onclick="return confirm('Delete this announcement?')">
                                    <i class="fa-solid fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</div>
  @*  ///////  Responsive Page  ////////  *@