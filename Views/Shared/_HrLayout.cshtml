@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Infinity HRMS</title>

    <!-- Bootstrap + Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* ---------- GLOBAL ---------- */
        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background: #f3f4f7;
        }

        /* ---------- SIDEBAR ---------- */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: #ffffff;
            border-right: 1px solid #e5e7eb;
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.05);
            padding: 25px 0;
            border-radius: 0 20px 20px 0;
            transition: 0.35s ease;
            z-index: 1050;
        }

            .sidebar.collapsed {
                width: 82px;
            }

        .sidebar-header {
            text-align: center;
            padding: 0 10px 25px;
            border-bottom: 1px solid #eaeaea;
        }

        .sidebar-logo {
            width: 150px;
            transition: 0.3s ease;
        }

        .sidebar.collapsed .sidebar-logo {
            width: 50px;
        }

        .sidebar-header h4 {
            font-size: 18px;
            margin-top: 10px;
            font-weight: 700;
            color: #1f2937;
            transition: .3s;
        }

        .sidebar.collapsed .sidebar-header h4 {
            opacity: 0;
            visibility: hidden;
        }

        .sidebar-menu {
            margin-top: 25px;
        }

        .menu-item {
            margin: 10px 15px;
            height: 48px;
            display: flex;
            align-items: center;
            padding: 0 18px;
            border-radius: 12px;
            text-decoration: none;
            color: #374151;
            font-size: 15px;
            font-weight: 600;
            transition: 0.25s ease-in-out;
            background: #ffffff;
            border: 1px solid #e5e7eb;
        }

            .menu-item:hover {
                background: #eef2ff;
                color: #3730a3;
                border-color: #c7d2fe;
                transform: translateX(6px);
            }

            .menu-item i {
                font-size: 20px;
                margin-right: 14px;
            }

            .menu-item.active {
                background: #4f46e5;
                color: white;
            }

                .menu-item.active i {
                    color: white;
                }

        .sidebar.collapsed .menu-item {
            justify-content: center;
            padding: 0;
        }

            .sidebar.collapsed .menu-item span {
                display: none;
            }

            .sidebar.collapsed .menu-item i {
                margin: 0;
            }

        .logout .menu-item {
            background: #fee2e2;
            color: #b91c1c;
            border-color: #fecaca;
        }

        /* ---------- PAGE CONTENT ---------- */
        #page-content {
            margin-left: 250px;
            transition: 0.35s;
        }

        .sidebar.collapsed ~ #page-content {
            margin-left: 82px;
        }

        .navbar {
            background: #ffffff;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.06);
            border-bottom: 1px solid #e5e7eb;
        }

            .navbar button {
                background: none;
                border: none;
                font-size: 22px;
                cursor: pointer;
                color: #374151;
            }

            .navbar span {
                font-size: 16px;
                color: #1f2937;
            }

        /* ---------- MOBILE SIDEBAR ---------- */
        @@media (max-width: 992px) {
            .sidebar {
                position: fixed;
                left: -250px;
                top: 0;
                height: 100%;
                z-index: 2000;
                border-radius: 0;
                box-shadow: 6px 0 18px rgba(0, 0, 0, 0.15);
            }

                .sidebar.active {
                    left: 0;
                }

            #page-content {
                margin-left: 0 !important;
            }

            .navbar button {
                font-size: 24px;
            }

            .sidebar.collapsed {
                width: 250px;
            }

            .sidebar-overlay {
                position: fixed;
                inset: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 1500;
                display: none;
            }

                .sidebar-overlay.active {
                    display: block;
                }
        }

        /* ---------- SMALL DEVICES ---------- */
        @@media (max-width: 576px) {
            .sidebar-header h4 {
                font-size: 16px;
            }

            .menu-item {
                font-size: 14px;
                height: 44px;
            }

                .menu-item i {
                    font-size: 18px;
                    margin-right: 10px;
                }

            .navbar span {
                font-size: 14px;
            }

            .container-fluid {
                padding: 1rem !important;
            }
        }

    </style>
</head>

<body>

    <!-- Sidebar Overlay for Mobile -->
    <div id="sidebar-overlay" class="sidebar-overlay"></div>

    <!-- HR SIDEBAR -->
    <div id="sidebar-wrapper" class="sidebar">

        <div class="sidebar-header">
            <img src="~/images/infinity-logo.png" class="sidebar-logo" />
            <h4>HRMS Portal</h4>
        </div>

        <div class="sidebar-menu">
            <a asp-controller="Home" asp-action="Index" class="menu-item">
                <i class="fa-solid fa-gauge"></i><span>Dashboard</span>
            </a>
            <a asp-controller="Employees" asp-action="Index" class="menu-item">
                <i class="fa-solid fa-user-tie"></i><span>Employee Management</span>
            </a>
            <a asp-controller="Attendance" asp-action="Index" class="menu-item">
                <i class="fa-solid fa-calendar-check"></i><span>Attendance</span>
            </a>
            <a asp-controller="Leave" asp-action="LeaveReport" class="menu-item">
                <i class="fa-solid fa-plane-departure"></i><span>Leave Management</span>
            </a>
            <a asp-controller="Leave" asp-action="ApprovalDashboard" class="menu-item">
                <i class="fa-solid fa-check-to-slot"></i><span>Leave Approvals</span>
            </a>
            <a asp-controller="Payroll" asp-action="Monthly" class="menu-item">
                <i class="fa-solid fa-wallet"></i><span>Payroll</span>
            </a>
            <a asp-controller="Expenses" asp-action="HRList" class="menu-item">
                <i class="fa-solid fa-laptop"></i><span>Expenses</span>
            </a>
            <a asp-controller="Gurukul" asp-action="HRList" class="menu-item">
                <i class="fa-solid fa-graduation-cap"></i><span>Gurukul (Admin)</span>
            </a>

            <a asp-controller="Announcements" asp-action="Create" class="menu-item">
                <i class="fa-solid fa-notification">📢</i><span>Announcements</span>
            </a>
            <a asp-controller="Reports" asp-action="Index" class="menu-item">
                <i class="fa-solid fa-file-alt"></i><span>Reports</span>
            </a>

            <div class="logout">
                <a asp-controller="Account" asp-action="Logout" class="menu-item">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div id="page-content">
        <nav class="navbar px-4 py-3 d-flex align-items-center">
            <button id="sidebarToggle"><i class="fa-solid fa-bars"></i></button>
            <span class="ms-auto fw-semibold">Infinity Arthvishva</span>
        </nav>

        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>

    <script>
        const sidebar = document.getElementById("sidebar-wrapper");
        const sidebarToggle = document.getElementById("sidebarToggle");
        const sidebarOverlay = document.getElementById("sidebar-overlay");

        // Desktop collapse toggle
        sidebarToggle.addEventListener("click", () => {
            if (window.innerWidth <= 992) {
                sidebar.classList.toggle("active");
                sidebarOverlay.classList.toggle("active");
            } else {
                sidebar.classList.toggle("collapsed");
            }
        });

        // Close sidebar when overlay clicked
        sidebarOverlay.addEventListener("click", () => {
            sidebar.classList.remove("active");
            sidebarOverlay.classList.remove("active");
        });

        // Auto close sidebar on resize
        window.addEventListener("resize", () => {
            if (window.innerWidth > 992) {
                sidebar.classList.remove("active");
                sidebarOverlay.classList.remove("active");
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
