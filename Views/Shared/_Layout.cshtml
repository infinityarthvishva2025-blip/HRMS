<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HR System</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light py-3 px-3">
                <i class="fa-solid fa-users me-2"></i> HR System
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-gauge me-2"></i> Dashboard
                </a>
                <a asp-controller="Employees" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-user-tie me-2"></i> Employee Management
                </a>
                <a asp-controller="Attendance" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-calendar-check me-2"></i> Attendance
                </a>
                <a asp-controller="Leave" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-plane-departure me-2"></i> Leave Management
                </a>
                <a asp-controller="Payroll" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-wallet me-2"></i> Payroll
                </a>
                <a asp-controller="Expense Management" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-wallet me-2"></i> Expense Management
                </a>
                <a asp-controller="Assest Management" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-wallet me-2"></i> Assest Management
                </a>
                <a asp-controller="Tag" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-tag me-2"></i> Geo Tag Management
                </a>
                <a asp-controller="Reports" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                    <i class="fa-solid fa-file-alt me-2"></i> Reports
                </a>
                <a asp-controller="Account" asp-action="Logout" class="list-group-item list-group-item-action bg-light text-danger">
                    <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
                </a>
            </div>
        </div>

        <!-- Page content -->
        <div id="page-content-wrapper">
            <!-- Top navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">☰</button>
                    <span class="navbar-text ms-auto">Welcome,Gaurav @User.Identity?.Name</span>
                </div>
            </nav>

            <!-- Main content -->
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebarToggle = document.getElementById('sidebarToggle');
        const wrapper = document.getElementById('wrapper');

        sidebarToggle.addEventListener('click', () => {
            wrapper.classList.toggle('toggled');
        });
    </script>
</body>
</html>
 