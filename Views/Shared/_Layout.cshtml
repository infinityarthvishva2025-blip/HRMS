        }

        .last-updated {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .dashboard-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease;
            border: none;
            margin-bottom: 1.5rem;
            overflow: hidden;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            }

        .card-icon {
            width: 60px;
            height: 60px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-right: 15px;
        }

        .employees-icon {
            background-color: rgba(58, 123, 213, 0.1);
            color: #3a7bd5;
        }

        .present-icon {
            background-color: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }

        .geotags-icon {
            background-color: rgba(23, 162, 184, 0.1);
            color: #17a2b8;
        }

        .leaves-icon {
            background-color: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }

        .card-value {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0;
        }

        .card-title {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 0;
        }

        .hr-system-section {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            padding: 1.5rem;
            margin-top: 1rem;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #343a40;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #eee;
        }

        .progress {
            height: 10px;
            border-radius: 5px;
            margin-top: 5px;
        }

        .progress-bar {
            background: linear-gradient(to right, #3a7bd5, #00d2ff);
        }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 1rem 0;
            margin-top: 2rem;
            font-size: 0.9rem;
        }

        body {
            background-color: #f5f7fb;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .custom-logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px 15px;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            background-color: white;
        }

        .logo-image {
            max-width: 100px;
            height: auto;
        }
    </style>
</head>
