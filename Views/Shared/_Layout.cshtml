<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Infinity HRMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>

        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background: #f3f4f7;
        }

        /* =======================================================
                   APPLE MATERIAL YOU STYLE SIDEBAR
                   Clean, soft, professional UI
                   ======================================================= */

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: #ffffff;
            border-right: 1px solid #e5e7eb;
            box-shadow: 4px 0 20px rgba(0,0,0,0.05);
            padding: 25px 0;
            border-radius: 0 20px 20px 0;
            transition: 0.35s ease;
            z-index: 1000;
        }

            .sidebar.collapsed {
                width: 82px;
            }

        /* LOGO AREA */
        .sidebar-header {
            text-align: center;
            padding: 0 10px 25px;
            border-bottom: 1px solid #eaeaea;
        }

        .sidebar-logo {
            width: 150px;
            transition: 0.3s ease;
        }

        .sidebar.collapsed .sidebar-logo {
            width: 50px;
        }

        .sidebar-header h4 {
            font-size: 18px;
            margin-top: 10px;
            font-weight: 700;
            color: #1f2937;
            transition: .3s;
        }

        .sidebar.collapsed .sidebar-header h4 {
            opacity: 0;
            visibility: hidden;
        }

        /* MENU LIST */
        .sidebar-menu {
            margin-top: 25px;
        }

        .menu-item {
            margin: 10px 15px;
            height: 48px;
            display: flex;
            align-items: center;
            padding: 0 18px;
            border-radius: 12px;
            text-decoration: none;
            color: #374151;
            font-size: 15px;
            font-weight: 600;
            transition: 0.25s ease-in-out;
            background: #ffffff;
            border: 1px solid #e5e7eb;
        }

            .menu-item i {
                font-size: 22px;
                margin-right: 14px;
                color: #6366f1;
                transition: 0.25s ease;
            }

            .menu-item:hover {
                background: #eef2ff;
                color: #3730a3;
                border-color: #c7d2fe;
                transform: translateX(6px);
            }

                .menu-item:hover i {
                    color: #4f46e5;
                    transform: scale(1.15);
                }

            .menu-item.active {
                background: #4f46e5;
                color: white;
                border: none;
            }

                .menu-item.active i {
                    color: white;
                }

        /* COLLAPSED MODE */
        .sidebar.collapsed .menu-item {
            justify-content: center;
            padding: 0;
        }

            .sidebar.collapsed .menu-item span {
                display: none;
            }

            .sidebar.collapsed .menu-item i {
                margin: 0;
            }

        .menu-item i {
            font-size: 22px;
            margin-right: 14px;
            transition: 0.25s ease;
        }

            /* MULTI-COLOR ICONS BELOW */
            .menu-item i.fa-gauge {
                color: #2ecc71 !important;
            }

            .menu-item i.fa-user-tie {
                color: #3498db !important;
            }

            .menu-item i.fa-calendar-check {
                color: #f1c40f !important;
            }

            .menu-item i.fa-plane-departure {
                color: #9b59b6 !important;
            }

            .menu-item i.fa-wallet {
                color: #1abc9c !important;
            }

            .menu-item i.fa-box {
                color: #8e5c42 !important;
            }

            .menu-item i.fa-file-invoice-dollar {
                color: #f39c12 !important;
            }

            .menu-item i.fa-chart-line {
                color: #3f51b5 !important;
            }

            .menu-item i.fa-graduation-cap {
                color: #2c3e50 !important;
            }

            .menu-item i.fa-right-from-bracket {
                color: #e63946 !important;
            }

        /* LOGOUT */
        .logout .menu-item {
            background: #fee2e2;
            color: #b91c1c;
            border-color: #fecaca;
        }

            .logout .menu-item:hover {
                background: #fecaca;
            }

        /* PAGE CONTENT */
        #page-content {
            margin-left: 250px;
            transition: 0.35s;
        }

        .sidebar.collapsed ~ #page-content {
            margin-left: 82px;
        }

        .navbar {
            background: #ffffff;
            box-shadow: 0 3px 12px rgba(0,0,0,0.06);
            border-bottom: 1px solid #e5e7eb;
        }

        #sidebarToggle {
            border: none;
            padding: 8px 12px;
            border-radius: 8px;
            background: #4f46e5;
            color: white;
        }

        @@media (max-width: 768px) {
            .sidebar {
                left: -260px;
            }

                .sidebar.active {
                    left: 0;
                }

            #page-content {
                margin-left: 0 !important;
            }
        }

    </style>

</head>

<body>

    <!-- SIDEBAR -->
    <div id="sidebar-wrapper" class="sidebar">

        <div class="sidebar-header">
            <img src="~/images/infinity-logo.png" class="sidebar-logo" />
            <h4>HRMS Portal</h4>
        </div>

            <div class="sidebar-menu">
                <a asp-controller="Home" asp-action="Index" class="menu-item active">
                    <i class="fa-solid fa-gauge icon-dashboard"></i><span>Dashboard</span>
                </a>
                <a asp-controller="Employees" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-user-tie icon-employee"></i><span>Employee Management</span>
                </a>
                <a asp-controller="Attendance" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-calendar-check icon-attendance"></i><span>Attendance </span>
                </a>
                @* <a asp-controller="GeoAttendance" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-tag icon-geo"></i><span>Geo Tag</span>
                </a> *@
            <a asp-controller="Leave" asp-action="LeaveReport" class="menu-item">
                    <i class="fa-solid fa-plane-departure icon-leave"></i><span>Leave Management</span>
                </a>
            <a asp-controller="Leave" asp-action="ApprovalDashboard" class="menu-item">
                <i class="fa-solid fa-check-to-slot"></i>
                <span>Leave Approvals</span>
            </a>
                <a asp-controller="Payroll" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-wallet icon-payroll"></i><span>Payroll</span>
                </a>
               
                <a asp-controller="Assets" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-box icon-assets"></i><span>Assets</span>
                </a>
                <a asp-controller="Expenses" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-laptop icon-expenses"></i><span>Expenses</span>
                </a>
                <a asp-controller="Reports" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-file-alt icon-reports"></i><span>Reports</span>
                </a>
                <a asp-controller="Gurukul" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-file-alt icon-Gurukul"></i><span>🎓 Gurukul </span>
                </a>
              @*   <a asp-controller="Gurukul" asp-action="ProgressReport" class="menu-item">
                    <i class="fa-solid fa-file-alt icon-Gurukul"></i><span>📊 Employee Progress</span>
                </a> *@
                <a asp-controller="Account" asp-action="Logout" class="menu-item logout">
                    <i class="fa-solid fa-right-from-bracket icon-logout"></i><span>Logout</span>
            </a>
           
        </div>
    </div>

    <!-- PAGE CONTENT -->
    <div id="page-content">
        <nav class="navbar px-4 py-3">
            <button id="sidebarToggle"><i class="fa-solid fa-bars"></i></button>
            <span class="ms-auto fw-semibold ">Infinity Arthvishva</span>
        </nav>

        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const sidebar = document.getElementById("sidebar-wrapper");
        document.getElementById("sidebarToggle").addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
