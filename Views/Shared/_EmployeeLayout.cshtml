@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
    var empId = Context.Session.GetInt32("EmployeeId"); // SAFE: Works on all pages
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: "Poppins", "Segoe UI", sans-serif;
            background: #f3f4f7;
        }

        /* =============================== */
        /*            SIDEBAR             */
        /* =============================== */

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #ffffff;
            border-right: 1px solid #e5e7eb;
            padding: 25px 0;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: 0.35s ease;
            border-radius: 0 20px 20px 0;
            box-shadow: 4px 0 20px rgba(0,0,0,0.05);
        }

            .sidebar.collapsed {
                width: 82px;
            }

        .sidebar-header {
            text-align: center;
            padding: 0 10px 20px;
            border-bottom: 1px solid #eee;
        }

        .sidebar-logo {
            width: 120px;
            transition: 0.3s ease;
        }

        .sidebar.collapsed .sidebar-logo {
            width: 48px;
        }

        .sidebar-header h4 {
            margin-top: 10px;
            font-weight: 700;
            font-size: 16px;
            color: #1f2937;
            transition: .3s;
        }

        .sidebar.collapsed .sidebar-header h4 {
            opacity: 0;
            visibility: hidden;
        }

        /* =============================== */
        /*           MENU ITEMS            */
        /* =============================== */

        .menu-item {
            margin: 10px 15px;
            padding: 12px 18px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            color: #111827;
            font-weight: 600;
            border: 1px solid #e5e7eb;
            background: #ffffff;
            text-decoration: none;
            transition: 0.25s ease-in-out;
            position: relative;
        }

            .menu-item i {
                margin-right: 14px;
                font-size: 18px;
                color: #2F3D88;
            }

            .menu-item:hover {
                background: #f0f5ff;
                transform: translateX(6px);
                border-color: #c7d2fe;
            }

        .sidebar.collapsed .menu-item {
            justify-content: center;
            padding: 12px 0;
        }

            .sidebar.collapsed .menu-item span {
                display: none;
            }

            .sidebar.collapsed .menu-item i {
                margin: 0;
            }

        .submenu-toggle {
            cursor: pointer;
        }

            .submenu-toggle .toggle-icon {
                margin-left: auto;
                font-size: 14px;
                color: #9ca3af;
                transition: transform .3s ease;
            }

        .submenu-open .toggle-icon {
            transform: rotate(180deg);
            color: #2F3D88;
        }

        /* Active menu */
        .active-menu {
            background: #2F3D88 !important;
            border-color: #2F3D88 !important;
            color: #ffffff !important;
            transform: translateX(8px);
        }

            .active-menu i {
                color: #ffffff !important;
            }

        /* Logout Button */
        .logout .menu-item {
            background: #fee2e2 !important;
            color: #b91c1c !important;
            border-color: #fecaca !important;
        }

            .logout .menu-item i {
                color: #b91c1c !important;
            }

        /* =============================== */
        /*              SUBMENUS           */
        /* =============================== */

        .submenu {
            display: none;
            flex-direction: column;
            margin: 0 15px 5px 35px;
        }

        .submenu-item {
            padding: 9px 16px;
            margin: 4px 0;
            font-size: 14px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #2F3D88;
            background: #eef2ff;
            border: 1px solid #d6dafc;
            transition: .25s;
        }

            .submenu-item i {
                margin-right: 10px;
                font-size: 14px;
                color: #0E8376;
            }

            .submenu-item:hover {
                background: rgba(249, 168, 38, 0.12);
                border-color: #F9A826;
                transform: translateX(6px);
            }

        .active-submenu {
            background: #2F3D88;
            color: #ffffff;
            border-color: #2F3D88;
        }

            .active-submenu i {
                color: #ffffff;
            }

        /* =============================== */
        /*           PAGE CONTENT          */
        /* =============================== */

        #page-content {
            margin-left: 250px;
            padding: 30px;
            transition: 0.35s ease;
        }

        .sidebar.collapsed ~ #page-content {
            margin-left: 82px;
        }

        .topbar {
            background: #ffffff;
            padding: 14px 25px;
            border-bottom: 1px solid #e5e7eb;
            box-shadow: 0 3px 12px rgba(0,0,0,0.05);
            border-radius: 12px;
        }

            .topbar span.fw-bold {
                color: #2F3D88;
                letter-spacing: .5px;
            }

        /* Bell animation */
        .bell-icon {
            font-size: 22px;
            transition: 0.3s ease;
        }

        .blink {
            animation: shake 0.8s infinite;
        }

        @@keyframes shake {
            0% {
                transform: rotate(0deg);
            }

            20% {
                transform: rotate(-15deg);
            }

            40% {
                transform: rotate(15deg);
            }

            60% {
                transform: rotate(-10deg);
            }

            80% {
                transform: rotate(10deg);
            }

            100% {
                transform: rotate(0deg);
            }
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div id="sidebar-wrapper" class="sidebar">

        <div class="sidebar-header">
            <img src="~/images/infinity-logo.png" class="sidebar-logo" />
            <h4>Employee Panel</h4>
        </div>

        <div class="sidebar-menu">

            <!-- Dashboard -->
            <a asp-controller="Employees" asp-action="Dashboard" class="menu-item">
                <i class="fa-solid fa-gauge"></i><span>Dashboard</span>
            </a>

            <!-- Profile -->
            <a asp-controller="Employees" asp-action="MyProfile" class="menu-item">
                <i class="fa-solid fa-id-card"></i><span>My Profile</span>
            </a>

            <!-- Attendance -->
            <div class="menu-item submenu-toggle" onclick="toggleSubmenu('attendanceMenu')">
                <i class="fa-solid fa-calendar-check"></i>
                <span>My Attendance</span>
                <i class="fa-solid fa-chevron-down toggle-icon"></i>
            </div>

            <div id="attendanceMenu" class="submenu">
                <a asp-controller="Attendance" asp-action="EmployeePanel" class="submenu-item">
                    <i class="fa-solid fa-check-circle"></i>Mark Attendance
                </a>

                <a asp-controller="Attendance"
                   asp-action="EmployeeSummary"
                   asp-route-employeeId="@empId"
                   class="submenu-item">
                    <i class="fa-solid fa-chart-line"></i>Attendance Summary
                </a>
            </div>

            <!-- Leaves -->
            <div class="menu-item submenu-toggle" onclick="toggleSubmenu('leaveMenu')">
                <i class="fa-solid fa-plane"></i>
                <span>Leaves</span>
                <i class="fa-solid fa-chevron-down toggle-icon"></i>
            </div>

            <div id="leaveMenu" class="submenu">
                <a asp-controller="Leave" asp-action="Create" class="submenu-item">
                    <i class="fa-solid fa-paper-plane"></i>Apply Leave
                </a>

                <a asp-controller="Leave" asp-action="LeaveReport" class="submenu-item">
                    <i class="fa-solid fa-list-check"></i>My Leaves
                </a>

                <a asp-controller="Leave" asp-action="ApprovalDashboard" class="submenu-item position-relative">
                    <i class="fa-solid fa-check-to-slot"></i>Leave Approvals
                    <span id="approvalBubble"
                          class="position-absolute top-0 end-0 translate-middle p-1 bg-danger rounded-circle"
                          style="display:none; width:12px; height:12px;"></span>
                </a>
            </div>

            <!-- Expenses -->
            <div class="menu-item submenu-toggle" onclick="toggleSubmenu('expenseMenu')">
                <i class="fa-solid fa-wallet"></i>
                <span>Expenses</span>
                <i class="fa-solid fa-chevron-down toggle-icon"></i>
            </div>

            <div id="expenseMenu" class="submenu">
                <a asp-controller="Expenses" asp-action="Create" class="submenu-item">
                    <i class="fa-solid fa-plus-circle"></i>Add Expense
                </a>
            </div>

            <!-- Gurukul -->
            <div class="menu-item submenu-toggle" onclick="toggleSubmenu('gurukulMenu')">
                <i class="fa-solid fa-graduation-cap"></i>
                <span>Gurukul</span>
                <i class="fa-solid fa-chevron-down toggle-icon"></i>
            </div>

            <div id="gurukulMenu" class="submenu">
                <a asp-controller="Gurukul" asp-action="Index" class="submenu-item">
                    <i class="fa-solid fa-book-open"></i>Gurukul Home
                </a>
            </div>

            <!-- Announcements -->
            <div class="menu-item submenu-toggle" onclick="toggleSubmenu('announcementMenu')">
                <i class="fa-solid fa-bullhorn"></i>
                <span>Announcements</span>
                <i class="fa-solid fa-chevron-down toggle-icon"></i>
            </div>

            <div id="announcementMenu" class="submenu">
                <a asp-controller="Announcements" asp-action="MyNotifications" class="submenu-item">
                    <i class="fa-solid fa-bell"></i>My Notifications
                </a>
            </div>

            <!-- Logout -->
            <div class="logout">
                <a asp-controller="Account" asp-action="Logout" class="menu-item">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </div>

        </div>
    </div>

    <!-- PAGE CONTENT -->
    <div id="page-content">
        <div class="topbar d-flex justify-content-between align-items-center mb-4">
            <button id="sidebarToggle"
                    class="btn btn-sm px-3"
                    style="background:#2F3D88; color:white; border-radius:999px;">
                <i class="fa-solid fa-bars"></i>
            </button>

            <span class="fw-bold">Infinity Arthvishva</span>

            <a href="/Announcements/MyNotifications"
               class="btn btn-secondary position-relative bell-icon @(ViewBag.UnreadCount > 0 ? "blink" : "")">
                <i class="fa-solid fa-bell text-white"></i>

                @if (ViewBag.UnreadCount > 0)
                {
                    <span class="badge bg-danger rounded-circle position-absolute top-0 end-0"
                          style="font-size: 11px; padding: 5px 7px;">
                        @ViewBag.UnreadCount
                    </span>
                }
            </a>
        </div>

        @RenderBody()
    </div>

    <!-- ====================== SCRIPTS ====================== -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", () => {
            document.getElementById("sidebar-wrapper").classList.toggle("collapsed");
        });

        fetch('/Leave/GetPendingCount')
            .then(res => res.json())
            .then(count => {
                if (count > 0) document.getElementById('approvalBubble').style.display = 'block';
            });

        function toggleSubmenu(id) {
            const submenu = document.getElementById(id);
            const open = submenu.style.display === "flex";
            submenu.style.display = open ? "none" : "flex";

            const parent = submenu.previousElementSibling;
            parent.classList.toggle("submenu-open", !open);
        }

        // highlight active page
        (function () {
            const url = window.location.href;

            document.querySelectorAll('a.menu-item').forEach(item => {
                if (item.href === url) item.classList.add("active-menu");
            });

            document.querySelectorAll('.submenu-item').forEach(item => {
                if (item.href === url) {
                    item.classList.add("active-submenu");
                    const submenu = item.closest(".submenu");
                    submenu.style.display = "flex";
                    submenu.previousElementSibling.classList.add("submenu-open");
                }
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
