@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>

        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background: #f3f4f7;
        }

        /* =============================== */
        /*            SIDEBAR             */
        /* =============================== */

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #ffffff;
            border-right: 1px solid #e5e7eb;
            padding: 25px 0;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: 0.35s ease;
            border-radius: 0 20px 20px 0;
            box-shadow: 4px 0 20px rgba(0,0,0,0.05);
        }

            .sidebar.collapsed {
                width: 82px;
            }

        .sidebar-header {
            text-align: center;
            padding: 0 10px 20px;
            border-bottom: 1px solid #eee;
        }

        .sidebar-logo {
            width: 120px;
            transition: 0.3s ease;
        }

        .sidebar.collapsed .sidebar-logo {
            width: 48px;
        }

        .sidebar-header h4 {
            margin-top: 10px;
            font-weight: 700;
            font-size: 16px;
            color: #1f2937;
            transition: .3s;
        }

        .sidebar.collapsed .sidebar-header h4 {
            opacity: 0;
            visibility: hidden;
        }

        /* =============================== */
        /*           MENU ITEMS            */
        /* =============================== */

        .menu-item {
            margin: 12px 15px;
            padding: 12px 18px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            color: #374151;
            font-weight: 600;
            border: 1px solid #e5e7eb;
            background: #ffffff;
            text-decoration: none;
            transition: 0.25s ease-in-out;
        }

            .menu-item i {
                margin-right: 14px;
                font-size: 20px;
                color: #4f46e5;
            }

            .menu-item:hover {
                background: #eef2ff;
                transform: translateX(6px);
                border-color: #c7d2fe;
            }

        .sidebar.collapsed .menu-item {
            justify-content: center;
            padding: 12px 0;
        }

            .sidebar.collapsed .menu-item span {
                display: none;
            }

            .sidebar.collapsed .menu-item i {
                margin: 0;
            }

        /* Logout Button */
        .logout .menu-item {
            background: #fee2e2 !important;
            color: #b91c1c !important;
            border-color: #fecaca !important;
        }

        /* =============================== */
        /*           PAGE CONTENT          */
        /* =============================== */

        #page-content {
            margin-left: 250px;
            padding: 30px;
            transition: 0.35s ease;
        }

        .sidebar.collapsed ~ #page-content {
            margin-left: 82px;
        }

        .topbar {
            background: #ffffff;
            padding: 14px 25px;
            border-bottom: 1px solid #e5e7eb;
            box-shadow: 0 3px 12px rgba(0,0,0,0.05);
        }

    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div id="sidebar-wrapper" class="sidebar">

        <div class="sidebar-header">
            <img src="~/images/infinity-logo.png" class="sidebar-logo" />
            <h4>Employee Panel</h4>
        </div>

        <div class="sidebar-menu">

            <a asp-controller="Employees" asp-action="Dashboard" class="menu-item">
                <i class="fa-solid fa-gauge"></i><span>Dashboard</span>
            </a>

            <a asp-controller="Employees" asp-action="MyProfile" class="menu-item">
                <i class="fa-solid fa-id-card"></i><span>My Profile</span>
            </a>

            <a asp-controller="Attendance" asp-action="EmployeePanel" class="menu-item">
                <i class="fa-solid fa-calendar-check"></i><span>My Attendance</span>
            </a>

            <a asp-controller="Leave" asp-action="Create" class="menu-item">
                <i class="fa-solid fa-plane"></i><span>Apply Leave</span>
            </a>

            <a asp-controller="Leave" asp-action="LeaveReport" class="menu-item">
                <i class="fa-solid fa-list-check"></i><span>My Leaves</span>
            </a>

            <a asp-controller="Expenses" asp-action="Create" class="menu-item">
                <i class="fa-solid fa-graduation-cap"></i><span>Expenses</span>
            </a>
            <a asp-controller="Gurukul" asp-action="Index" class="menu-item">
                <i class="fa-solid fa-graduation-cap"></i>
                <span>Gurukul</span>
            </a>

            <div class="logout">
                <a asp-controller="Account" asp-action="Logout" class="menu-item">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </div>

        </div>
    </div>

    <!-- PAGE CONTENT -->
    <div id="page-content">
        <div class="topbar d-flex justify-content-between align-items-center">
            <button id="sidebarToggle" class="btn btn-primary btn-sm px-3">
                <i class="fa-solid fa-bars"></i>
            </button>

            <span class="fw-bold">Infinity Arthvishva</span>
        </div>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            document.getElementById("sidebar-wrapper").classList.toggle("collapsed");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
