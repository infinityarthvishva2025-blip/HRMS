@{
    ViewData["Title"] = "Manual Attendance";
    Layout = "_HrLayout";
}

<div class="container py-4">

    <h2 class="fw-bold mb-4">
        <i class="fa-solid fa-user-check me-2 text-success"></i>
        Manual Attendance Entry
    </h2>

    <!-- SUCCESS / ERROR MESSAGES -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <form method="post" asp-action="ManualAttendance">

                <div class="mb-3">
                    <label class="fw-bold">Employee Code</label>
                    <input type="text" name="EmpCode" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Date</label>
                    <input type="date" name="Date" class="form-control" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Check-In Time</label>
                        <input type="time" name="InTime" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Check-Out Time</label>
                        <input type="time" name="OutTime" class="form-control" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-success mt-2">
                    <i class="fa-solid fa-save me-1"></i> Save Attendance
                </button>

            </form>

        </div>
    </div>

</div>
