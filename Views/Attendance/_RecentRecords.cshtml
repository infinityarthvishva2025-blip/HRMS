@model IEnumerable<HRMS.Models.Attendance1>

<div class="card mt-3">
    <div class="card-header"><h5>Recent Attendance Records</h5></div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Employee</th>
                    <th>In Time</th>
                    <th>Out Time</th>
                    <th>Method</th>
                    <th>Status</th>
                    <th>Location</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Date.ToString("yyyy-MM-dd")</td>
                        <td>@r.EmployeeName</td>
                        <td>@r.InTime?.ToString(@"hh\:mm") ?? "-"</td>
                        <td>@r.OutTime?.ToString(@"hh\:mm") ?? "-"</td>
                        <td>@r.Method</td>
                        <td><span class="status @r.Status.ToLower()">@r.Status</span></td>
                        <td>@r.Location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
