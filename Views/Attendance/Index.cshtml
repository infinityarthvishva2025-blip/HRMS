@model List<HRMS.Models.Attendance>

@{
    ViewData["Title"] = "Employee Attendance";
    Layout = "_Layout";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fa-solid fa-calendar-check me-2"></i> Attendance Records
        </h2>
    </div>

    <!-- ✅ MONTHLY EXPORT SECTION -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white fw-bold">
            <i class="fa-solid fa-file-excel text-success me-2"></i>
            Export Monthly Attendance Report
        </div>

        <div class="card-body">
            <form method="get" action="/Attendance/ExportMonthlyReport" class="row g-3">

                <div class="col-md-4">
                    <label class="form-label fw-bold">Select Month</label>
                    <select name="month" class="form-select" required>
                        <option value="">Choose...</option>
                        @for (int m = 1; m <= 12; m++)
                        {
                            <option value="@m">
                                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Select Year</label>
                    <select name="year" class="form-select" required>
                        @for (int y = DateTime.Now.Year - 3; y <= DateTime.Now.Year; y++)
                        {
                            <option value="@y">@y</option>
                        }
                    </select>
                </div>

                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-success px-4 w-100">
                        <i class="fa-solid fa-file-excel me-1"></i> Export Excel
                    </button>
                </div>

            </form>
        </div>
    </div>

    <!-- ✅ ATTENDANCE TABLE -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-bordered table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Employee Code</th>
                        <th>Name</th>
                        <th>Check In</th>
                        <th>Check Out</th>
                        <th>Status</th>
                        <th>Summary</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.Employee?.EmployeeCode</td>
                            <td>@a.Employee?.Name</td>

                            <td>@a.CheckInTime.ToString("dd MMM yyyy, hh:mm tt")</td>

                            <td>
                                @(a.CheckOutTime != null
                                                            ? a.CheckOutTime?.ToString("dd MMM yyyy, hh:mm tt")
                                                            : "--")
                            </td>

                            <td>
                                @if (a.CheckOutTime == null)
                                {
                                    <span class="badge bg-warning text-dark">Not Checked Out</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                            </td>

                            <td>
                                <a class="btn btn-sm btn-primary"
                                   asp-controller="Attendance"
                                   asp-action="EmployeeSummary"
                                   asp-route-employeeId="@a.EmployeeId">
                                    Summary
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        font-size: 1.05rem;
    }

    .badge {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    table th, table td {
        vertical-align: middle;
    }
</style>
