@model HRMS.Models.Assets
@{
    ViewData["Title"] = "Delete Asset";
}

<h2>Delete Asset</h2>
<hr />

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this asset?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Asset Name</dt>
            <dd class="col-sm-9">@Model.AssetName</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Purchase Date</dt>
            <dd class="col-sm-9">@((Model.PurchaseDate.HasValue ? Model.PurchaseDate.Value.ToShortDateString() : "N/A"))</dd>


            <dt class="col-sm-3">Cost</dt>
            <dd class="col-sm-9">@Model.Cost</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Assigned To</dt>
            <dd class="col-sm-9">@Model.AssignedTo</dd>

            <dt class="col-sm-3">Remarks</dt>
            <dd class="col-sm-9">@Model.Remarks</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
