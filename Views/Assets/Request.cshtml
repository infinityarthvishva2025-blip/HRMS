@model HRMS.Models.Assets
@{
    ViewData["Title"] = "Apply for Asset";
}

<h2>Apply for Asset</h2>
<hr />

<form asp-action="Request" method="post" class="card p-4 shadow-sm">
    <div class="form-group mb-3">
        <label>Employee Code</label>
        <input asp-for="EmployeeCode" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Employee Name</label>
        <input asp-for="EmployeeName" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Department</label>
        <input asp-for="Department" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Asset Type</label>
        <select asp-for="AssetType" class="form-select" required>
            <option value="">-- Select Asset --</option>
            <option>Laptop</option>
            <option>Keyboard</option>
            <option>Mouse</option>
            <option>Headset</option>
            <option>Monitor</option>
            <option>Chair</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Asset Description</label>
        <textarea asp-for="AssetDescription" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
