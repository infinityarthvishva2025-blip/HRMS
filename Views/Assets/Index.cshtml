@model IEnumerable<HRMS.Models.Assets>
@{
    ViewData["Title"] = "Assets List";
}

<h2 class="mb-3">Assets List</h2>
<a href="/Assets/Create" class="btn btn-primary mb-3">Add New Asset</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Asset Name</th>
            <th>Category</th>
            <th>Purchase Date</th>
            <th>Cost</th>
            <th>Status</th>
            <th>Assigned To</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AssetName</td>
                <td>@item.Category</td>
                <td>@(item.PurchaseDate.HasValue? item.PurchaseDate.Value.ToShortDateString() : "N/A")</td>
                <td>@item.Cost</td>
                <td>@item.Status</td>
                <td>@item.AssignedTo</td>
                <td>@item.Remarks</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
