@model IEnumerable<HRMS.Models.Assets>
@{
    ViewData["Title"] = "Assets List";
}

<h2 class="mb-3">Assets List</h2>
<a href="/Assets/Create" class="btn btn-primary mb-3">Add New Asset</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Asset Name</th>
            <th>Category</th>
            <th>Purchase Date</th>
            <th>Cost</th>
            <th>Status</th>
            <th>Assigned To</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AssetName</td>
                <td>@item.Category</td>
                <td>@(item.PurchaseDate.HasValue? item.PurchaseDate.Value.ToShortDateString() : "N/A")</td>
                <td>@item.Cost</td>
                <td>@item.Status</td>
                <td>@item.AssignedTo</td>
                <td>@item.Remarks</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                            <select name="status" class="form-select form-select-sm d-inline" style="width:120px;">
                                <option value="Pending" selected>Pending</option>
                                <option value="Approved">Approve</option>
                                <option value="Rejected">Reject</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-success">@item.Status</span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
