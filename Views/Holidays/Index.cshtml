@model List<Holiday>

@{
    ViewBag.Title = "Holidays";
    var role = ViewBag.UserRole as string;

    if (role == "HR" || role == "VP" || role == "GM" || role == "Director")
    {
        Layout = "~/Views/Shared/_HrLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    }
}

<h4 class="mb-3">Company Holidays</h4>

<!-- 🔹 RIGHT ALIGNED BUTTONS -->
<div class="d-flex justify-content-end align-items-center mb-3">
    @if (role == "HR")
    {
        <a href="@Url.Action("Create", "Holidays")"
           class="btn btn-success me-2">
            + Add Holiday
        </a>
    }

    <a href="@Url.Action("Calendar", "Holidays")"
       class="btn btn-info">
        View Calendar
    </a>
</div>

<!-- 🔹 HOLIDAY TABLE -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Date</th>
            <th>Day</th>
            <th>Holiday Name</th>
            @if (role == "HR")
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.HolidayDate.ToString("dd-MM-yyyy")</td>
                <td>@h.HolidayDate.DayOfWeek</td>
                <td>@h.HolidayName</td>

                @if (role == "HR")
                {
                    <td>
                        <a href="@Url.Action("Edit", "Holidays", new { id = h.Id })"
                           class="btn btn-sm btn-warning me-1">
                            Edit
                        </a>

                        <a href="@Url.Action("Delete", new { id = h.Id })"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Delete this holiday?');">
                            Delete
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
