@model HRMS.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white fw-bold">
            <i class="fa-solid fa-trash me-2"></i> Delete Employee
        </div>

        <div class="card-body">
            <h5 class="text-danger fw-bold">Are you sure you want to delete this employee?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Employee Code</dt>
                <dd class="col-sm-9">@Model.EmployeeCode</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Position</dt>
                <dd class="col-sm-9">@Model.Position</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Cancel
            </a>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
