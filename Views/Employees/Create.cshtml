@model HRMS.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
}

<div class="container mt-5 mb-5">
    <div class="card shadow border-0">
        <div class="card-header bg-gradient fw-bold text-black"
             style="background: linear-gradient(90deg, #0077c2, #009688);">
            <i class="fa-solid fa-user-plus me-2"></i> Add New Employee
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="EmployeeCode" class="form-label">Employee Code</label>
                        <input asp-for="EmployeeCode" class="form-control" placeholder="IA0001" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Name" class="form-label">Full Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">Select</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="FatherName" class="form-label">Father’s Name</label>
                        <input asp-for="FatherName" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="MotherName" class="form-label">Mother’s Name</label>
                        <input asp-for="MotherName" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="DOB_Date" class="form-label">Date of Birth</label>
                        <input asp-for="DOB_Date" type="date" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="JoiningDate" class="form-label">Date of Joining</label>
                        <input asp-for="JoiningDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Department" class="form-label">Department</label>
                        <select asp-for="Department" id="departmentDropdown" class="form-select">
                            <option value="">Select</option>
                            <option>IT</option>
                            <option>HR</option>
                            <option>Finance</option>
                            <option>Marketing</option>
                            <option>Accounting</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Position" class="form-label">Position</label>
                        <input asp-for="Position" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="ReportingManager" class="form-label">Reporting Manager</label>
                        <input asp-for="ReportingManager" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Salary" class="form-label">Salary</label>
                        <input asp-for="Salary" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
                        <input asp-for="MobileNumber" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="AlternateNumber" class="form-label">Alternate Number</label>
                        <input asp-for="AlternateNumber" class="form-control" />
                    </div>
                </div>

                <!-- File Uploads -->
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Aadhaar Card</label>
                        <input type="file" name="AadharCard" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">PAN Card</label>
                        <input type="file" name="PanCard" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Marksheet</label>
                        <input type="file" name="Marksheet" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Bank Passbook</label>
                        <input type="file" name="BankPassbook" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Profile Photo</label>
                        <input type="file" name="ProfilePhoto" class="form-control" />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa-solid fa-save me-1"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="fa-solid fa-arrow-left me-1"></i> Back
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>
