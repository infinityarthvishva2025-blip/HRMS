@model HRMS.Models.ViewModels.EmployeeDashboardViewModel

@{
    ViewData["Title"] = "Employee Dashboard";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="dashboard-container py-5">

    <!-- HEADER SECTION -->
    <div class="dashboard-header text-center mb-5">
        <h2 class="welcome-title mb-2">
            <i class="fa-solid fa-hand-wave text-warning me-2"></i>
            Welcome, @Model.Employee.Name
        </h2>
        <p class="lead text-black">Your personalized work summary & attendance panel</p>

        <a href="/Attendance/EmployeePanel" class="btn btn-attendance mt-3 shadow">
            <i class="fa-solid fa-calendar-check me-2"></i> Mark Attendance
        </a>

        <!-- Salary Slip Button -->
        <button type="button" class="btn btn-salary mt-3 ms-2 shadow" data-bs-toggle="modal" data-bs-target="#salarySlipModal">
            <i class="fa-solid fa-file-invoice-dollar me-2"></i> View Salary Slip
        </button>
    </div>


    <!-- INFO CARDS -->
    <div class="row g-4 justify-content-center">
        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center animate-card">
                <div class="icon-circle bg-primary bg-gradient mb-3">
                    <i class="fa-solid fa-building fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Department</h6>
                <h5 class="fw-bold text-dark">@Model.Employee.Department</h5>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center animate-card">
                <div class="icon-circle bg-success bg-gradient mb-3">
                    <i class="fa-solid fa-briefcase fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Position</h6>
                <h5 class="fw-bold text-dark">@Model.Employee.Position</h5>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center animate-card">
                <div class="icon-circle bg-info bg-gradient mb-3">
                    <i class="fa-solid fa-plane-departure fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Total Leaves</h6>
                <h5 class="fw-bold text-dark">@Model.TotalLeaves</h5>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center animate-card">
                <div class="icon-circle bg-warning bg-gradient mb-3">
                    <i class="fa-solid fa-circle-check fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Approved Leaves</h6>
                <h5 class="fw-bold text-dark">@Model.ApprovedLeaves</h5>
            </div>
        </div>
    </div>

    <!-- QUICK ACTIONS -->
    <div class="quick-actions text-center mt-5">
        <a asp-controller="Leave" asp-action="Create"
           class="btn btn-lg text-white shadow action-btn">
            <i class="fa-solid fa-paper-plane me-2"></i> Apply Leave
        </a>

        <a asp-controller="Leave" asp-action="LeaveReport"
           class="btn btn-lg btn-outline-secondary shadow-sm ms-3 action-btn-outline">
            <i class="fa-solid fa-calendar-check me-2"></i> My Leaves
        </a>

        <a asp-controller="Employees" asp-action="Gurukul"
           class="btn btn-lg btn-outline-secondary shadow-sm ms-3 action-btn-outline">
            <i class="fa-solid fa-book-open me-2"></i> Gurukul
        </a>
    </div>
</div>

<!-- ============================= -->
<!-- SALARY SLIP MODAL -->
<!-- ============================= -->
<div class="modal fade" id="salarySlipModal" tabindex="-1" aria-labelledby="salarySlipModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title" id="salarySlipModalLabel">
                    <i class="fa-solid fa-file-invoice-dollar me-2"></i> Select Month & Year
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="salarySlipForm">
                    <div class="mb-3">
                        <label for="month" class="form-label fw-bold">Month</label>
                        <select id="month" class="form-select" required>
                            <option value="">-- Select Month --</option>
                            @for (int m = 1; m <= 12; m++)
                            {
                                <option value="@m">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="year" class="form-label fw-bold">Year</label>
                        <select id="year" class="form-select" required>
                            <option value="">-- Select Year --</option>
                            @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                            {
                                <option value="@y">@y</option>
                            }
                        </select>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-4 rounded-pill">
                            <i class="fa-solid fa-search me-2"></i> Show Salary Slip
                        </button>
                    </div>
                </form>
            </div>

            <div class="modal-footer text-center d-none" id="salarySlipResult">
                <a id="downloadSlipBtn" href="#" class="btn btn-gradient-primary px-4 py-2 rounded-pill shadow-sm" target="_blank">
                    <i class="fa-solid fa-download me-2"></i> Download Salary Slip
                </a>
            </div>
        </div>
    </div>
</div>

<!-- ============================= -->
<!-- STYLING -->
<!-- ============================= -->
<style>
    body {
        background: #f0f4fb;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #0d47a1, #009688);
        padding: 40px;
        border-radius: 16px;
        color: white;
        box-shadow: 0 5px 20px rgba(0,0,0,0.15);
    }

    .btn-attendance,
    .btn-salary {
        background: white;
        color: #0d47a1;
        font-weight: 600;
        border-radius: 10px;
        padding: 12px 24px;
        transition: 0.3s ease;
    }

        .btn-salary:hover {
            background: #e3f2fd;
            transform: translateY(-2px);
        }

    .info-card {
        background: #fff;
        border-radius: 15px;
        transition: all 0.3s ease;
    }

        .info-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .icon-circle {
        width: 75px;
        height: 75px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        box-shadow: 0 6px 14px rgba(0,0,0,0.2);
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #0d47a1, #009688);
        color: #fff;
        font-weight: 600;
        transition: all .3s ease;
    }

        .btn-gradient-primary:hover {
            transform: translateY(-2px);
            opacity: 0.9;
            color: #fff;
        }
</style>

<!-- ============================= -->
<!-- SCRIPT -->
<!-- ============================= -->
<script>
    document.getElementById("salarySlipForm").addEventListener("submit", function (e) {
        e.preventDefault();

        const month = document.getElementById("month").value;
        const year = document.getElementById("year").value;

        if (!month || !year) return alert("Please select both month and year!");

        const downloadLink = `/Payroll/DownloadSalarySlip?month=${month}&year=${year}`;
        const resultDiv = document.getElementById("salarySlipResult");
        const btn = document.getElementById("downloadSlipBtn");

        btn.href = downloadLink;
        resultDiv.classList.remove("d-none");
    });
</script>
