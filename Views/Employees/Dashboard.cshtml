@model HRMS.Models.Employee

<div class="container py-4">

    <h2 class="fw-bold text-primary mb-3">
        Welcome, @Model.Name 👋
    </h2>

    <div class="row">

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="~/uploads/profiles/@Model.ProfileImagePath"
                         class="img-fluid rounded-circle mb-3"
                         style="height:150px;width:150px;object-fit:cover;" />

                    <h4 class="fw-bold">@Model.Name</h4>
                    <p class="text-muted">@Model.Position</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header fw-bold">Employee Information</div>

                <div class="card-body">
                    <p><strong>Employee Code:</strong> @Model.EmployeeCode</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Mobile:</strong> @Model.MobileNumber</p>
                    <p><strong>Department:</strong> @Model.Department</p>
                    <p><strong>Position:</strong> @Model.Position</p>
                    <p><strong>Reporting Manager:</strong> @Model.ReportingManager</p>
                    <p><strong>Joining Date:</strong> @Model.JoiningDate?.ToString("dd MMM yyyy")</p>
                </div>
            </div>
        </div>

    </div>
</div>
