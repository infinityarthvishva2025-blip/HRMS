@model HRMS.Models.ViewModels.EmployeeDashboardViewModel

@{
    ViewData["Title"] = "Employee Dashboard";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="dashboard-container py-5">

    <!-- HEADER SECTION -->
    <div class="dashboard-header text-center mb-5">
        <h2 class="welcome-title mb-2">
            <i class="fa-solid fa-hand-wave text-warning me-2"></i>
            Welcome, @Model.Employee.Name
        </h2>
        <p class="lead text-white">Your personalized work summary & attendance panel</p>

        <div class="mt-4 text-center">

            <a href="/Attendance/EmployeePanel"
               class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold">
                <i class="fa-solid fa-calendar-check me-2"></i> Mark Attendance
            </a>

            <a asp-controller="Attendance" asp-action="EmployeeSummary"
               asp-route-employeeId="@Model.Employee.Id"
               class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold">
                <i class="fa-solid fa-chart-line me-2"></i> Attendance Summary
            </a>

            <a asp-controller="Leave" asp-action="Create"
               class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold">
                <i class="fa-solid fa-paper-plane me-2"></i> Apply Leave
            </a>

            <button type="button"
                    class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold"
                    data-bs-toggle="modal"
                    data-bs-target="#salarySlipModal">
                <i class="fa-solid fa-file-invoice-dollar me-2"></i> View Salary Slip
            </button>

        </div>

    </div>

    <!-- INFO CARDS -->
    <div class="row g-4 justify-content-center">
        <!-- Department -->
        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center">
                <div class="icon-circle bg-primary bg-gradient mb-3">
                    <i class="fa-solid fa-building fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Department</h6>
                <h5 class="fw-bold text-dark">@Model.Employee.Department</h5>
            </div>
        </div>

        <!-- Position -->
        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center">
                <div class="icon-circle bg-success bg-gradient mb-3">
                    <i class="fa-solid fa-briefcase fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Position</h6>
                <h5 class="fw-bold text-dark">@Model.Employee.Position</h5>
            </div>
        </div>

        <!-- Total Leaves -->
        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center">
                <div class="icon-circle bg-info bg-gradient mb-3">
                    <i class="fa-solid fa-plane-departure fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Total Leaves</h6>
                <h5 class="fw-bold text-dark">@Model.TotalLeaves</h5>
            </div>
        </div>

        <!-- Approved Leaves -->
        <div class="col-md-3 col-sm-6">
            <div class="info-card shadow-sm p-4 text-center">
                <div class="icon-circle bg-warning bg-gradient mb-3">
                    <i class="fa-solid fa-circle-check fa-2x text-white"></i>
                </div>
                <h6 class="fw-bold text-muted">Approved Leaves</h6>
                <h5 class="fw-bold text-dark">@Model.ApprovedLeaves</h5>
            </div>
        </div>
    </div>
</div>

<!-- ============================= -->
<!-- SALARY SLIP MODAL -->
<!-- ============================= -->

<div class="modal fade" id="salarySlipModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fa-solid fa-file-invoice-dollar me-2"></i> Select Month & Year
                </h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="salarySlipForm">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Month</label>
                        <select id="month" class="form-select" required>
                            <option value="">-- Select Month --</option>
                            @for (int m = 1; m <= 12; m++)
                            {
                                <option value="@m">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Year</label>
                        <select id="year" class="form-select" required>
                            <option value="">-- Select Year --</option>
                            @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                            {
                                <option value="@y">@y</option>
                            }
                        </select>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-4 rounded-pill">
                            <i class="fa-solid fa-search me-2"></i> Show Salary Slip
                        </button>
                    </div>
                </form>
            </div>

            <div class="modal-footer justify-content-center d-none" id="salarySlipResult">
                <a id="downloadSlipBtn"
                   class="btn btn-gradient-primary px-4 py-2 rounded-pill shadow-sm"
                   target="_blank">
                    <i class="fa-solid fa-download me-2"></i> Download Salary Slip
                </a>
            </div>

        </div>
    </div>
</div>

<!-- ============================= -->
<!-- STYLING -->
<!-- ============================= -->

<style>
    body {
        background: #eef3fb;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #0d47a1, #00897b);
        padding: 50px 30px;
        border-radius: 20px;
        color: white;
    }

    .info-card {
        background: white;
        border-radius: 15px;
        transition: all .3s ease;
    }

        .info-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 28px rgba(0,0,0,0.12);
        }

    .icon-circle {
        width: 75px;
        height: 75px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: auto;
        box-shadow: 0 6px 18px rgba(0,0,0,0.2);
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #0d47a1, #00acc1);
        color: white !important;
    }
</style>

<!-- ============================= -->
<!-- JS -->
<!-- ============================= -->

<script>
       document.getElementById("salarySlipForm").addEventListener("submit", function (e) {
        e.preventDefault();

        const month = document.getElementById("month").value;
        const year = document.getElementById("year").value;

        const empCode = "@Model.Employee.EmployeeCode";   // ADD THIS

        if (!month || !year) {
            return alert("Please select both month and year!");
        }

        const btn = document.getElementById("downloadSlipBtn");

        // FIXED URL — now includes empCode
        btn.href = `/Payroll/DownloadSalarySlip?empCode=${empCode}&month=${month}&year=${year}`;

        document.getElementById("salarySlipResult").classList.remove("d-none");
    });

</script>