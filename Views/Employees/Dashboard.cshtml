<style>
    body {
        background: #eef3fb;
    }

    /* HEADER */
    .dashboard-header {
        background: linear-gradient(135deg, #0d47a1, #00897b);
        padding: 40px 25px;
        border-radius: 20px;
        color: white;
    }

    .welcome-title {
        font-size: 32px;
        font-weight: 700;
    }

    .welcome-sub {
        font-size: 18px;
        margin-top: -8px;
    }

    /* Buttons container */
    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        justify-content: center;
    }

    .dash-btn {
        background: white;
        color: #333;
        padding: 10px 22px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        transition: 0.3s;
    }

        .dash-btn:hover {
            transform: translateY(-3px);
            background: #f7f7f7;
        }

    /* CARDS */
    .info-card {
        background: white;
        border-radius: 15px;
        transition: .3s;
    }

        .info-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 28px rgba(0,0,0,0.12);
        }

    .icon-circle {
        width: 75px;
        height: 75px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: auto;
        box-shadow: 0 6px 18px rgba(0,0,0,0.2);
    }

    .info-label {
        color: #777;
        font-weight: 600;
        margin-top: 5px;
    }

    .info-value {
        font-size: 20px;
        font-weight: 700;
        color: #333;
    }

    /* ============== MOBILE RESPONSIVE FIXES ============== */

    @@media (max-width: 992px) {

        .welcome-title {
            font-size: 26px;
        }

        .welcome-sub {
            font-size: 15px;
        }

        .dashboard-header {
            padding: 30px 18px;
        }
    }

    @@media (max-width: 576px) {

        .welcome-title {
            font-size: 22px;
        }

        .welcome-sub {
            font-size: 14px;
        }

        .dashboard-header {
            padding: 25px 15px;
        }

        .dash-btn {
            width: 100%;
            justify-content: center;
            font-size: 15px;
            padding: 10px;
        }

        .icon-circle {
            width: 65px;
            height: 65px;
        }

        .info-value {
            font-size: 18px;
        }
    }
</style>

<!-- =========================================================== -->
<!-- JS FOR SALARY SLIP -->
<!-- =========================================================== -->
<script>
       document.getElementById("salarySlipForm").addEventListener("submit", function (e) {
        e.preventDefault();

        const month = document.getElementById("month").value;
        const year = document.getElementById("year").value;

        const empCode = "@Model.Employee.EmployeeCode";   // ADD THIS

        if (!month || !year) {
            return alert("Please select both month and year!");
        }

        const btn = document.getElementById("downloadSlipBtn");

        // FIXED URL — now includes empCode
        btn.href = `/Payroll/DownloadSalarySlip?empCode=${empCode}&month=${month}&year=${year}`;

        document.getElementById("salarySlipResult").classList.remove("d-none");
    });

</script>