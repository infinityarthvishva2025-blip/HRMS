@model HRMS.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
    Layout = "_Layout";
}

<style>
    .emp-photo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 16px;
        border: 3px solid #0aa0c8;
    }

    .section-title {
        font-size: 1rem;
        font-weight: 700;
        color: #0077c2;
        text-transform: uppercase;
        margin-bottom: 10px;
    }
</style>

<div class="container py-4">

    <!-- PAGE TITLE -->
    <div class="d-flex justify-content-between mb-4">
        <h3 class="text-primary fw-bold">
            <i class="fa-solid fa-user-circle me-2"></i>
            Employee Details
        </h3>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i> Back
        </a>
    </div>

    <div class="card shadow-sm border-0 p-4">

        <div class="row mb-4">
            <div class="col-md-3 text-center">
                <img src="@Url.Content(Model.ProfilePhotoPath ?? "~/images/default-user.png")" class="emp-photo" />
                <h5 class="mt-3 fw-bold">@Model.Name</h5>
                <p class="text-muted">@Model.Position</p>
            </div>

            <div class="col-md-9">
                <!-- BASIC INFO -->
                <div class="section-title">Basic Details</div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Employee Code:</strong> @Model.EmployeeCode</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Mobile:</strong> @Model.MobileNumber</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Alternate Mobile:</strong> @Model.AlternateMobileNumber</p>
                        <p><strong>Gender:</strong> @Model.Gender</p>
                        <p><strong>Date of Birth:</strong> @Model.DOB_Date?.ToString("dd-MM-yyyy")</p>
                    </div>
                </div>

                <hr />

                <!-- FAMILY INFO -->
                <div class="section-title">Family</div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Father:</strong> @Model.FatherName</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Mother:</strong> @Model.MotherName</p>
                    </div>
                </div>

                <hr />

                <!-- ADDRESS -->
                <div class="section-title">Address</div>
                <p>@Model.Address</p>

                <hr />

                <!-- JOB DETAILS -->
                <div class="section-title">Employment</div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Department:</strong> @Model.Department</p>
                        <p><strong>Position:</strong> @Model.Position</p>
                        <p><strong>Reporting Manager:</strong> @Model.ReportingManager</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Joining Date:</strong> @Model.JoiningDate?.ToString("dd-MM-yyyy")</p>
                        <p><strong>Salary:</strong> ₹@Model.Salary</p>
                    </div>
                </div>

                <hr />

                <!-- EXPERIENCE -->
                <div class="section-title">Experience</div>
                @if (Model.ExperienceType == "Experienced")
                {
                    <p><strong>Total Years:</strong> @Model.TotalExperienceYears</p>
                    <p><strong>Last Company:</strong> @Model.LastCompanyName</p>
                }
                else
                {
                    <p><strong>Experience:</strong> Fresher</p>
                }

                <hr />

                <!-- EDUCATION -->
                <div class="section-title">Education</div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <p><strong>12th %:</strong> @Model.HSCPercent</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Graduation:</strong> @Model.GraduationCourse</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Graduation %:</strong> @Model.GraduationPercent</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Post Graduation:</strong> @Model.PostGraduationCourse</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>PG %:</strong> @Model.PostGraduationPercent</p>
                    </div>
                </div>

                <hr />

                <!-- ID DETAILS -->
                <div class="section-title">Identity Proof</div>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Aadhaar:</strong> @Model.AadhaarNumber</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>PAN:</strong> @Model.PanNumber</p>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
