@model IEnumerable<HRMS.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="card shadow border-0 p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold text-primary">
                <i class="fa-solid fa-users me-2 text-success"></i> Employee List
            </h3>
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="fa-solid fa-user-plus me-1"></i> Add Employee
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle table-bordered">
                <thead class="table-light text-center">
                    <tr>
                        <th>Photo</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Position</th>
                        <th>Manager</th>
                        <th>Mobile</th>
                        <th>Aadhaar</th>
                        <th>PAN</th>
                        <th>Marksheet</th>
                        <th>Passbook</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(e.ProfilePhotoPath))
                                {
                                    <img src="@Url.Content(e.ProfilePhotoPath)" width="40" height="40" class="rounded-circle" />
                                }
                                else
                                {

                                    <i class="fa-solid fa-user text-muted"></i>
                                    ;
                                }
                            </td>
                            <td>@e.EmployeeCode</td>
                            <td>@e.Name</td>
                            <td>@e.Department</td>
                            <td>@e.Position</td>
                            <td>@e.ReportingManager</td>
                            <td>@e.MobileNumber</td>

                            <td>
                                @if (!string.IsNullOrEmpty(e.AadharCardPath))
                                {
                                    <a href="@Url.Content(e.AadharCardPath)" target="_blank" class="text-success">
                                        <i class="fa-solid fa-file"></i>
                                    </a>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(e.PanCardPath))
                                {
                                    <a href="@Url.Content(e.PanCardPath)" target="_blank" class="text-primary">
                                        <i class="fa-solid fa-file"></i>
                                    </a>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(e.MarksheetPath))
                                {
                                    <a href="@Url.Content(e.MarksheetPath)" target="_blank" class="text-warning">
                                        <i class="fa-solid fa-file"></i>
                                    </a>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(e.BankPassbookPath))
                                {
                                    <a href="@Url.Content(e.BankPassbookPath)" target="_blank" class="text-info">
                                        <i class="fa-solid fa-file"></i>
                                    </a>
                                }
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-outline-success me-1">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@e.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Are you sure?');">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
