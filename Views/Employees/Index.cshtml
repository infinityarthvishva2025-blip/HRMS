@model IEnumerable<HRMS.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-gradient text-white fw-bold"
             style="background: linear-gradient(90deg, #0077c2, #009688);">
            <i class="fa-solid fa-users me-2"></i> Employee List
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <div class="text-end mb-3">
                <a asp-action="Create" class="btn text-white"
                   style="background: linear-gradient(90deg, #0077c2, #009688);">
                    <i class="fa-solid fa-user-plus me-1"></i> Add Employee
                </a>
            </div>

            <table class="table table-striped align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Employee Code</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Position</th>
                        <th>Salary</th>
                        <th>Geo Tag</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.EmployeeCode</td>
                            <td>@emp.Name</td>
                            <td>@emp.Email</td>
                            <td>@emp.Department</td>
                            <td>@emp.Position</td>
                            <td>₹@emp.Salary</td>
                            <td>@emp.JioTag</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
