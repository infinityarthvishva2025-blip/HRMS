@model HRMS.Models.Employee
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";

    string DocUrl(string file) =>
        string.IsNullOrWhiteSpace(file)
            ? ""
            : Url.Action("ViewDocument", "Employees",
                new { empCode = Model.EmployeeCode, fileName = file });
}

<div class="container py-4">

    <!-- ===================== HEADER ===================== -->
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h3 class="fw-bold">
            <i class="fa-solid fa-id-card me-2"></i> My Profile
        </h3>
    </div>

    <!-- ===================== PROFILE ===================== -->
    <div class="card shadow-sm mb-4 p-4">
        <div class="row align-items-center">

            <!-- Profile Image -->
            <div class="col-md-3 text-center">
                @{
                    var profileUrl = DocUrl(Model.ProfileImagePath);
                }

                @if (!string.IsNullOrEmpty(profileUrl))
                {
                    <img src="@profileUrl"
                         class="rounded-circle shadow"
                         style="width:150px;height:150px;object-fit:cover"
                         onerror="this.style.display='none';document.getElementById('noImg').style.display='flex';" />
                }

                <div id="noImg"
                     class="rounded-circle bg-light border d-flex align-items-center justify-content-center"
                     style="width:150px;height:150px;@(string.IsNullOrEmpty(profileUrl) ? "" : "display:none")">
                    <i class="fa-solid fa-user fa-4x text-muted"></i>
                </div>

                <h5 class="mt-3">@Model.Name</h5>
                <small class="text-muted">@Model.EmployeeCode</small><br />
                <span class="badge bg-dark mt-1">@Model.Role</span>
            </div>

            <!-- Basic Details -->
            <div class="col-md-9 border-start ps-4">
                <h5 class="fw-semibold mb-3"><i class="fa-solid fa-info-circle me-2"></i>Basic Details</h5>

                <div class="row g-3 small">
                    <div class="col-md-4"><strong>Email:</strong><br />@Model.Email</div>
                    <div class="col-md-4"><strong>Mobile:</strong><br />@Model.MobileNumber</div>
                    <div class="col-md-4"><strong>Alt Mobile:</strong><br />@(Model.AlternateMobileNumber ?? "-")</div>
                    <div class="col-md-4"><strong>Gender:</strong><br />@Model.Gender</div>
                    <div class="col-md-4"><strong>DOB:</strong><br />@(Model.DOB_Date?.ToString("dd-MMM-yyyy") ?? "-")</div>
                    <div class="col-md-4"><strong>Marital Status:</strong><br />@Model.MaritalStatus</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ===================== ADDRESS ===================== -->
    <div class="card shadow-sm mb-4 p-4">
        <h5 class="fw-semibold mb-3"><i class="fa-solid fa-location-dot me-2"></i>Address</h5>
        <div class="row g-3 small">
            <div class="col-md-6"><strong>Current:</strong><p>@(Model.Address ?? "-")</p></div>
            <div class="col-md-6"><strong>Permanent:</strong><p>@(Model.PermanentAddress ?? "-")</p></div>
        </div>
    </div>

    <!-- ===================== JOB DETAILS ===================== -->
    <div class="card shadow-sm mb-4 p-4">
        <h5 class="fw-semibold mb-3"><i class="fa-solid fa-briefcase me-2"></i>Job Details</h5>

        <div class="row g-3 small">
            <div class="col-md-4"><strong>Joining:</strong><br />@(Model.JoiningDate?.ToString("dd-MMM-yyyy") ?? "-")</div>
            <div class="col-md-4"><strong>Department:</strong><br />@Model.Department</div>
            <div class="col-md-4"><strong>Position:</strong><br />@Model.Position</div>
            <div class="col-md-4"><strong>Salary:</strong><br />₹@Model.Salary?.ToString("N0")</div>
            <div class="col-md-4"><strong>Experience:</strong><br />@(Model.TotalExperienceYears > 0 ? $"{Model.TotalExperienceYears} Years" : "Fresher")</div>
        </div>
    </div>

    <!-- ===================== EDUCATION ===================== -->
    <div class="card shadow-sm mb-4 p-4">
        <h5 class="fw-semibold mb-3"><i class="fa-solid fa-graduation-cap me-2"></i>Education</h5>

        <div class="row g-3 small">

            <div class="col-md-4"><strong>12th %:</strong> @Model.HSCPercent</div>
            <div class="col-md-6">
                <strong>12th Marksheet:</strong><br />
                @if (!string.IsNullOrEmpty(DocUrl(Model.TwelfthMarksheetFilePath)))
                {
                    <a href="@DocUrl(Model.TwelfthMarksheetFilePath)" target="_blank" class="btn btn-outline-secondary btn-sm mt-1">View</a>
                }
                else { <span>-</span> }
            </div>

            <div class="col-md-4"><strong>Graduation:</strong> @Model.GraduationCourse (@Model.GraduationPercent%)</div>
            <div class="col-md-6">
                <strong>Graduation Marksheet:</strong><br />
                @if (!string.IsNullOrEmpty(DocUrl(Model.GraduationMarksheetFilePath)))
                {
                    <a href="@DocUrl(Model.GraduationMarksheetFilePath)" target="_blank" class="btn btn-outline-secondary btn-sm mt-1">View</a>
                }
                else { <span>-</span> }
            </div>

            <div class="col-md-4"><strong>Post Graduation:</strong><br />
                @(string.IsNullOrEmpty(Model.PostGraduationCourse) ? "-" : $"{Model.PostGraduationCourse} ({Model.PostGraduationPercent}%)")
            </div>

            <div class="col-md-6">
                <strong>PG Marksheet:</strong><br />
                @if (!string.IsNullOrEmpty(DocUrl(Model.PostGraduationMarksheetFilePath)))
                {
                    <a href="@DocUrl(Model.PostGraduationMarksheetFilePath)" target="_blank" class="btn btn-outline-secondary btn-sm mt-1">View</a>
                }
                else { <span>-</span> }
            </div>
        </div>
    </div>

    <!-- ===================== ID PROOFS ===================== -->
    <div class="card shadow-sm mb-4 p-4">
        <h5 class="fw-semibold mb-3"><i class="fa-solid fa-id-card me-2"></i>ID Proofs</h5>

        <div class="row g-3 small">

            <div class="col-md-4"><strong>Aadhaar:</strong><br />@Model.AadhaarNumber</div>
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(DocUrl(Model.AadhaarFilePath)))
                {
                    <a href="@DocUrl(Model.AadhaarFilePath)" target="_blank" class="btn btn-outline-secondary btn-sm mt-1">View Aadhaar</a>
                }
            </div>

            <div class="col-md-4"><strong>PAN:</strong><br />@Model.PanNumber</div>
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(DocUrl(Model.PanFilePath)))
                {
                    <a href="@DocUrl(Model.PanFilePath)" target="_blank" class="btn btn-outline-secondary btn-sm mt-1">View PAN</a>
                }
            </div>
        </div>
    </div>

    <!-- ===================== BANK ===================== -->
    <div class="card shadow-sm mb-4 p-4">
        <h5 class="fw-semibold mb-3"><i class="fa-solid fa-building-columns me-2"></i>Bank Details</h5>

        <div class="row g-3 small">
            <div class="col-md-4"><strong>Account Holder:</strong>@Model.AccountHolderName</div>
            <div class="col-md-4"><strong>Bank:</strong>@Model.BankName</div>
            <div class="col-md-4"><strong>Account:</strong>@Model.AccountNumber</div>
            <div class="col-md-4"><strong>IFSC:</strong>@Model.IFSC</div>
            <div class="col-md-4"><strong>Branch:</strong>@Model.Branch</div>
        </div>

        @if (!string.IsNullOrEmpty(DocUrl(Model.PassbookFilePath)))
        {
            <a href="@DocUrl(Model.PassbookFilePath)" target="_blank" class="btn btn-outline-secondary btn-sm mt-2">View Passbook</a>
        }
    </div>

</div>
