@model PayrollViewModel
@{
    ViewData["Title"] = "Monthly Payroll";
    var role = ViewBag.UserRole as string;

    if (role == "HR" || role == "VP" || role == "GM" || role == "Director")
    {
        Layout = "~/Views/Shared/_HrLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    }
}

<div class="payroll-container">
    <h2 class="page-title">Generate Payroll</h2>

    <form asp-action="Generate" method="post" class="payroll-form">

        <div class="form-grid">

            <div class="form-group">
                <label>From Date</label>
                <input asp-for="FromDate" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>To Date</label>
                <input asp-for="ToDate" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>Month</label>
                <select asp-for="Month" class="form-control">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">
                            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                        </option>
                       @*  <option value="@i">
                            @System.Globalization.CultureInfo.CurrentCulture
                            .DateTimeFormat.GetMonthName(i)
                        </option> *@
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Year</label>
                <input asp-for="Year" class="form-control" />
            </div>

        </div>

       
      
            <div class="form-actions">
                <button type="submit" class="btn-generate">
                    Generate Payroll
                </button>
            </div>
            @*  <a class="btn btn-success">Generate Payroll</a> *@
       
    </form>
</div>
<style>
    /* Payroll Page Container */
    .payroll-container {
        max-width: 900px;
        margin: 30px auto;
        background: #ffffff;
        padding: 30px 35px;
        border-radius: 10px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }

    /* Page Title */
    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 25px;
    }

    /* Grid Layout */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px 25px;
    }

    /* Form Group */
    .form-group {
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 6px;
            color: #374151;
        }

    /* Inputs */
    .form-control {
        height: 40px;
        padding: 6px 10px;
        font-size: 14px;
        border-radius: 6px;
        border: 1px solid #d1d5db;
        outline: none;
    }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 2px rgba(37,99,235,0.15);
        }

    /* Action Button */
    .form-actions {
        margin-top: 30px;
        text-align: left;
    }

    .btn-generate {
        background: #2563eb;
        color: #ffffff;
        border: none;
        padding: 10px 22px;
        font-size: 14px;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.2s ease;
    }

        .btn-generate:hover {
            background: #1e40af;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-grid

    {
        grid-template-columns: 1fr;
    }

    }
</style>