@model IEnumerable<HRMS.Models.ViewModels.PayrollSummaryVm>

@{
    ViewData["Title"] = "Monthly Payroll";
    Layout = "~/Views/Shared/_HrLayout.cshtml";

    int year = ViewBag.Year;
    int month = ViewBag.Month;
}

<div class="container py-4">

    <h2 class="fw-bold text-primary mb-4">Monthly Payroll - @month/@year</h2>

    <!-- Filter Section -->
    <form method="get" class="row g-3 bg-white shadow-sm p-3 rounded mb-4">
        <div class="col-md-2">
            <label>Year</label>
            <input type="number" name="year" class="form-control" value="@year" min="2000" />
        </div>

        <div class="col-md-2">
            <label>Month</label>
            <input type="number" name="month" class="form-control" value="@month" min="1" max="12" />
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button class="btn btn-primary">Show</button>
        </div>
    </form>

    <!-- Payroll Table -->
    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark text-center align-middle">
            <tr>
                <th>Emp Code</th>
                <th>Name</th>
                <th>Working Days</th>
                <th>Half Days</th>
                <th>WO</th>
                <th>Absent</th>
                <th>Late Marks</th>
                <th>Late Deduction</th>
                <th>Paid Days</th>
                <th>Base Salary</th>
                <th>Per Day</th>
                <th>Gross</th>
                <th>Deductions</th>
                <th>Net</th>
                <th>Payslip</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var p in Model)
                {
                    <tr>
                        <td>@p.EmpCode</td>
                        <td>@p.EmpName</td>

                        <td class="text-center">@p.TotalDaysInMonth</td>
                        <td class="text-center">@p.PresentHalfDays</td>
                        <td class="text-center">@p.WeeklyOffDays</td>
                        <td class="text-center">@p.AbsentDays</td>
                        <td class="text-center">@p.LateMarks</td>
                        <td class="text-center">@p.LateDeductionDays</td>

                        <td class="text-center fw-bold">@p.PaidDays</td>

                        <td>@p.MonthlySalary.ToString("0.00")</td>
                        <td>@p.PerDaySalary.ToString("0.00")</td>
                        <td>@p.GrossSalary.ToString("0.00")</td>

                        <td class="text-danger">@p.TotalDeductions.ToString("0.00")</td>
                        <td class="fw-bold text-success">@p.NetSalary.ToString("0.00")</td>

                        <td class="text-center">
                            <a class="btn btn-success btn-sm"
                               href="@Url.Action("Payslip", "Payroll",
                                                                           new { empCode = p.EmpCode, year = p.Year, month = p.Month })">
                        Slip
                    </a>
                </td>
            </tr>
                        }
            }
            else
            {
                <tr>
                    <td colspan="15" class="text-center text-muted">No payroll data found for the selected month.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
