@model HRMS.Models.ViewModels.PayrollSummaryVm
@{
    Layout = null;   // IMPORTANT for PDF / clean render
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Salary Slip</title>

    <style>
        body {
            font-family: "Segoe UI", Arial, sans-serif;
            font-size: 13px;
            color: #222;
            margin: 30px;
        }

        .company-header {
            text-align: center;
            border-bottom: 2px solid #2f5597;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

            .company-header h1 {
                margin: 0;
                font-size: 22px;
                color: #2f5597;
                letter-spacing: 1px;
            }

            .company-header p {
                margin: 4px 0 0;
                font-size: 12px;
                color: #555;
            }

        .slip-title {
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            margin: 15px 0 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }

        th, td {
            border: 1px solid #444;
            padding: 8px;
        }

        th {
            background: #f2f4f8;
            text-align: left;
            font-weight: 600;
        }

        .no-border td {
            border: none;
            padding: 4px 8px;
        }

        .section-title {
            background: #2f5597;
            color: white;
            font-weight: bold;
            padding: 6px;
            margin-top: 20px;
            margin-bottom: 5px;
        }

        .right {
            text-align: right;
        }

        .net-salary {
            background: #e8f5e9;
            font-size: 15px;
            font-weight: bold;
        }

        .footer {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
            font-size: 12px;
        }

        .signature {
            text-align: right;
        }

        .note {
            font-size: 11px;
            color: #555;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <!-- ================= COMPANY HEADER ================= -->
    <div class="company-header">
        <h1>INFINITY ARTHVISHVA</h1>
        <p>Empowering Finance & Innovation</p>
    </div>

    <!-- ================= PAYSLIP TITLE ================= -->
    <div class="slip-title">
        SALARY SLIP - @Model.FromDate.ToString("dd MMM yyyy")
        to @Model.ToDate.ToString("dd MMM yyyy")

    </div>

    <!-- ================= EMPLOYEE DETAILS ================= -->
    <table class="no-border">
        <tr>
            <td><b>Employee Code:</b> @Model.EmpCode</td>
            <td><b>Employee Name:</b> @Model.EmpName</td>
        </tr>
        <tr>
            <td><b>Department:</b> @Model.Department</td>
            <td><b>Designation:</b> @Model.Designation</td>
        </tr>
    </table>

    <!-- ================= ATTENDANCE SUMMARY ================= -->
    <div class="section-title">Attendance Summary</div>
    <table>
        <tr>
            <th>Working Days</th>
            <th>Half Days</th>
            <th>Absent Days</th>
            <th>Weekly Off (Sun)</th>
            <th>Paid Days</th>
        </tr>
        <tr>
            <td class="right">@Model.TotalDaysInMonth</td>
            <td class="right">@Model.PresentHalfDays</td>
            <td class="right">@Model.AbsentDays</td>
            <td class="right">@Model.WeeklyOffDays</td>
            <td class="right">@Model.PaidDays.ToString("0.0")</td>
        </tr>
    </table>

    <!-- ================= SALARY DETAILS ================= -->
    <div class="section-title">Salary Details</div>
    <table>
        <tr>
            <th>Description</th>
            <th class="right">Amount (₹)</th>
        </tr>
        <tr>
            <td>Basic Salary</td>
            <td class="right">@Model.MonthlySalary.ToString("0.00")</td>
        </tr>
       @*  <tr>
            <td>Per Day Salary</td>
            <td class="right">@Model.PerDaySalary.ToString("0.00")</td>
        </tr> *@
        <tr>
            <td>Gross Salary</td>
            <td class="right">@Model.GrossSalary.ToString("0.00")</td>
        </tr>
        <tr>
            <td>Professional Tax</td>
            <td class="right">@Model.ProfessionalTax.ToString("0.00")</td>
        </tr>
        <tr>
            <td>Other Deductions</td>
            <td class="right">@Model.OtherDeductions.ToString("0.00")</td>
        </tr>
        <tr class="net-salary">
            <td>Net Salary Payable</td>
            <td class="right">@Model.NetSalary.ToString("0.00")</td>
        </tr>
    </table>

    <!-- ================= FOOTER ================= -->
    <div class="footer">
        <div class="note">
            * This is a system-generated salary slip and does not require a signature.
        </div>

        <div class="signature">
            <b>Authorized Signatory</b><br />
            Infinity Arthvishva
        </div>
    </div>

</body>
</html>
