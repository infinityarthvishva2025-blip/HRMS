@model IEnumerable<HRMS.Models.GurukulVideo>

<h2 class="text-primary mb-4">🎓 Gurukul Video Management (HR)</h2>

<a href="/Gurukul/Create" class="btn btn-success mb-3">+ Add New Video</a>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Description</th>
            <th>Uploaded On</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Title</td>
                <td>@v.Category</td>
                <td>@v.Description</td>
                <td>@v.UploadedOn.ToString("dd MMM yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-danger" href="/Gurukul/Delete/@v.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Gurukul/ProgressReport" class="btn btn-outline-primary mt-3">📊 View Progress Report</a>
