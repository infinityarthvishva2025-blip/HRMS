@model IEnumerable<HRMS.Models.GurukulVideo>

<h2>Gurukul - Admin</h2>
@{
Layout = "_HRLayout";
}
<p>
    <a asp-action="Create" class="btn btn-primary">Add Video</a>
</p>

<table class="table table-striped">
    <thead><tr><th>Title</th><th>Category</th><th>Uploaded</th><th>Progress</th><th>Action</th></tr></thead>
    <tbody>
        @foreach (var v in Model)
        {
            var totalEmployees = ViewBag.TotalEmployees != null ? (int)ViewBag.TotalEmployees : 0; // optional, fill in controller if desired
                  <tr>
                      <td>@v.Title</td>
                      <td>@v.Category</td>
                      <td>@v.UploadedOn.ToLocalTime().ToString("dd-MM-yyyy")</td>
                      <td>
                          <a asp-action="Progress" asp-route-id="@v.Id" class="btn btn-info btn-sm">View Progress</a>
                       </td>
                       <td>
                          <form asp-action="Delete" method="post" style="display:inline;">
                              <input type="hidden" name="id" value="@v.Id" />
                              <button class="btn btn-danger btn-sm" onclick="return confirm('Delete this video?')">Delete</button>
                          </form>
                       </td>
                  </tr>
        }
    </tbody>
</table>
