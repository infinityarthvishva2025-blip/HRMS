@model IEnumerable<HRMS.Models.ViewModels.GurukulProgressReportViewModel>

@{
    ViewData["Title"] = "Gurukul Progress Report";
}

@* <h2 class="text-primary mb-4 text-center">
    📊 Gurukul Progress Report
</h2> *@
<h2 class="text-primary mb-4 text-center rotate-box">
    📊 Gurukul Progress Report
</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th>Employee Name</th>
                <th>Employee Code</th>
                <th>Total Videos</th>
                <th>Completed</th>
                <th>Progress</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.EmployeeName</td>
                    <td>@e.EmployeeCode</td>
                    <td class="text-center">@e.TotalVideos</td>
                    <td class="text-center">@e.CompletedVideos</td>

                    <td style="width: 200px;">
                        <div class="progress" style="height: 22px;">
                            <div class="progress-bar bg-success fw-bold"
                                 role="progressbar"
                                 style="width:@e.ProgressPercentage%">
                                @e.ProgressPercentage%
                            </div>
                        </div>
                    </td>

                    <td class="text-center">
                        <button class="btn btn-sm btn-outline-info view-details-btn"
                                type="button"
                                data-target="details-@e.EmployeeCode">
                            <span class="btn-text">View Details</span>
                            <span class="icon">▼</span>
                        </button>
                    </td>
                </tr>

                <!-- Collapsible details row -->
                <tr class="details-row collapse" id="details-@e.EmployeeCode">
                    <td colspan="6">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Video Title</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Completed On</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in e.Details)
                                {
                                    <tr>
                                        <td>@v.Title</td>
                                        <td>@v.Category</td>
                                        <td>
                                            @if (v.IsCompleted)
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            @v.CompletedOn?.ToString("dd-MMM-yyyy") ?? "-"
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- 🔥 Auto-close, toggle icons -->
<script>
    document.querySelectorAll('.view-details-btn').forEach(btn => {
        btn.addEventListener('click', function () {

            let targetId = this.getAttribute("data-target");
            let targetRow = document.getElementById(targetId);

            // Close all other detail rows
            document.querySelectorAll(".details-row.show")
                .forEach(row => {
                    if (row.id !== targetId) {
                        row.classList.remove("show");
                    }
                });

            // Reset all icons
            document.querySelectorAll('.view-details-btn .icon')
                .forEach(i => i.textContent = "▼");

            // Toggle selected row
            targetRow.classList.toggle("show");

            // Update the icon for selected row
            const icon = this.querySelector(".icon");
            if (targetRow.classList.contains("show")) {
                icon.textContent = "▲";  // opened
            } else {
                icon.textContent = "▼";  // closed
            }
        });
    });
</script>

<style>
    .view-details-btn .icon {
        font-weight: bold;
        margin-left: 6px;
    }
</style>
