@model HRMS.Models.GeoTagViewModel

<link rel="stylesheet" href="~/css/geoattendance.css" />
<script src="~/js/geoattendance.js"></script>

<div class="geo-header">
    <h2 style="color:white;">
        <i class="bi bi-geo-alt-fill"></i> GEO Tag Attendance System
    </h2>

    <div class="user-info">
        <div class="avatar">JD</div>
        <div>
            <strong>John Doe</strong><br />
            <small>Administrator</small>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="card p-4">
        <h3 class="section-title">GEO Tag Attendance</h3>
        <p>Mark attendance using face authentication within 100km range</p>

        <div class="row mt-3">
            <div class="col-md-6">
                <label>Employee GEO Tag ID:</label>
                <select class="form-select">
                    <option>Select GEO Tag</option>
                    @foreach (var tag in Model.GeoTags)
                    {
                        <option>@tag</option>
                    }
                </select>

                <label class="mt-3">Current Location:</label>
                <div class="location-card">
                    <h4>@Model.CurrentLatitude , @Model.CurrentLongitude</h4>
                    <p>@Model.CurrentCity</p>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <div class="map-box">
                    <i class="bi bi-map"></i>
                    <h4>Interactive Map View</h4>
                    <p>GEO Tag Radius: 100km</p>
                </div>
                <button class="btn btn-success mt-2" onclick="refreshLocation()">Refresh Location</button>
            </div>
        </div>

        <hr />

        <h4><i class="bi bi-person-bounding-box"></i> Face Authentication Required</h4>
        <div class="face-box">
            <div class="face-symbol">
                <i class="bi bi-person-circle"></i>
            </div>
        </div>
    </div>
</div>

