@model HRMS.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Infinity Arthvishva | HRMS Login</title>
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #2076C7, #1CADA3);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-wrapper {
            display: flex;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            max-width: 900px;
            width: 90%;
        }

        /* Left Side */
        .login-left {
            flex: 1;
            background: #ffffff;
            color: #003366;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 40px 30px;
            position: relative;
        }

        .company-logo {
            width: 220px;
            margin-bottom: 25px;
            filter: drop-shadow(0 3px 8px rgba(0,0,0,0.2));
        }

        .login-left h1 {
            font-size: 26px;
            margin-top: 10px;
            color: #0077c2;
        }

        .login-left p {
            color: #444;
            font-size: 14px;
            line-height: 1.6;
        }

        /* Right Side */
        .login-right {
            flex: 1;
            padding: 40px 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #ffffff;
        }

        .login-box {
            width: 100%;
            max-width: 340px;
        }

            .login-box h2 {
                text-align: center;
                color: #0d47a1;
                margin-bottom: 25px;
                font-weight: bold;
            }

        .logo-round {
            background: #0d47a1;
            color: white;
            border-radius: 50%;
            padding: 6px 12px;
            font-weight: bold;
            margin-right: 8px;
        }

        /* PERFECT INPUT STYLE */
        .input-group {
            position: relative;
            margin-bottom: 18px;
            width: 100%;
        }

            .input-group input {
                width: 100%;
                height: 46px;
                padding: 12px 45px 12px 14px;
                border: 1.7px solid #b7b7b7;
                border-radius: 6px;
                font-size: 15px;
                box-sizing: border-box;
                background: #ffffff;
                transition: 0.2s;
            }

                .input-group input:focus {
                    border-color: #0077c2;
                    box-shadow: 0 0 6px rgba(0, 119, 194, 0.3);
                    outline: none;
                }

        /* Eye Icon Perfect Alignment */
        #togglePassword {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 18px;
            color: #666;
            padding: 5px;
        }

            #togglePassword:hover {
                color: #0077c2;
            }

        .options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            margin-bottom: 15px;
        }

        .btn-login {
            width: 100%;
            background: #0d6efd;
            color: white;
            padding: 11px;
            border: none;
            border-radius: 6px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-login:hover {
                background: #084298;
            }

        @@media (max-width: 768px) {
            .login-wrapper {
                flex-direction: column;
                max-width: 95%;
            }

            .login-left img {
                width: 140px;
            }
        }
    </style>
</head>

<body>
    <div class="login-wrapper">

        <!-- LEFT PANEL -->
        <div class="login-left">
            <img src="~/images/infinity-logo.png" alt="Infinity Arthvishva Logo" class="company-logo" />
            <h1>Welcome to HRMS</h1>
            <p>Manage your HR operations efficiently with Infinity Arthvishva’s HRMS platform.</p>
            <small>© 2025 Infinity Arthvishva | All Rights Reserved</small>
        </div>

        <!-- RIGHT PANEL -->
        <div class="login-right">
            <div class="login-box">

                <h2> LOGIN</h2>

                <form asp-action="Login" method="post">

                    <!-- USERNAME -->
                    <div class="input-group">
                        <input asp-for="UserId" placeholder="Enter HR ID or Employee Code" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <!-- PASSWORD -->
                    <div class="input-group">
                        <input asp-for="Password" id="passwordInput" type="password" placeholder="Password" />
                        <i class="fa-solid fa-eye" id="togglePassword"></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                   @*  <div class="options">
                        <label><input type="checkbox" /> Remember me</label>
                        <a href="#" style="text-decoration:none;color:#0077c2;">Forgot password?</a>
                    </div> *@

                    <button type="submit" class="btn-login">LOGIN</button>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                    }
                </form>

            </div>
        </div>

    </div>

    <!-- PASSWORD SHOW / HIDE SCRIPT -->
    <script>
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("passwordInput");

        togglePassword.addEventListener("click", function () {
            const type = passwordInput.type === "password" ? "text" : "password";
            passwordInput.type = type;

            this.classList.toggle("fa-eye");
            this.classList.toggle("fa-eye-slash");
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
