@model HRMS.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HRMS Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <h1>Welcome to HRMS</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
            <small>designed by freepik</small>
        </div>
        <div class="login-right">
            <h2><span class="logo">R</span> USER LOGIN</h2>
            <form asp-action="Login" method="post">
                <div class="input-group">
                    <input asp-for="Username" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <input asp-for="Password" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="options">
                    <label><input asp-for="RememberMe" /> Remember me</label>
                    <a href="#">Forgot password?</a>
                </div>
                <button type="submit" class="btn-login">LOGIN</button>
            </form>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
