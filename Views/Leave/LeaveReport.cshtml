        function loadPendingCounts() {

            fetch('/Leave/GetPendingCounts')
                .then(res => res.json())
                .then(data => {

                    document.getElementById("managerPending").textContent = data.managerPending;
                    document.getElementById("hrPending").textContent = data.hrPending;
                    document.getElementById("directorPending").textContent = data.directorPending;
                })
