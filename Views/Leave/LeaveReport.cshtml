@model IEnumerable<Leave>

@{
    ViewData["Title"] = "Leave Dashboard";
    Layout = "_EmployeeLayout";
}

<div class="container mt-4">
    <h3 class="mb-3">
    <i class="fa-solid fa-plane-departure icon-leave"></i><span> Leave Management</span>
    </h3>
    <!-- 🔷 Advanced Cards -->

    <div class="row g-3 mb-4">
        <div class="row mt-3">

            <div class="col-md-4">
                <div class="card shadow-sm p-3 text-center border-left-primary">
                    <h5>Manager Pending</h5>
                    <h3 id="managerPending" class="text-primary">0</h3>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3 text-center border-left-warning">
                    <h5>HR Pending</h5>
                    <h3 id="hrPending" class="text-warning">0</h3>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3 text-center border-left-danger">
                    <h5>VP Pending</h5>
                    <h3 id="directorPending" class="text-danger">0</h3>
                </div>
            </div>

        </div>

     
    </div>

    <!-- 🔷 Monthly Line Chart -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Leaves per Month (Current Year)</h5>
            <canvas id="leaveMonthlyChart" height="80"></canvas>
        </div>
    </div>
  
    <div class="text-center mt-5 mb-3">
        <a asp-controller="Leave" asp-action="Create" class="btn btn-lg text-white me-2 shadow"
           style="background: linear-gradient(90deg, #0077c2, #009688); border-radius: 8px;">
            <i class="fa-solid fa-paper-plane me-2"></i> Apply for Leave
        </a>

        
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Employee Name</td>
                <th>Category</th>
                <th>Start</th>
                <th>End</th>
                <th>Total Days</th>
                <th>Status</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
               
                    var empCode = item.Employee?.EmployeeCode ?? "-";
                    var empName = item.Employee?.Name ?? "-";
                <tr>
                    <td>@($"{empCode} - {empName}")</td>
                    <td>@item.Category</td>
                    <td>@(item.StartDate.ToString("dd-MM-yyyy") ?? "N/A")</td>
                    <td>@(item.EndDate?.ToString("dd-MM-yyyy") ?? "N/A")</td>
                    <td>@item.TotalDays</td>
                    <td>@item.OverallStatus</td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch('/Leave/GetMonthlyLeaveSummary')
                .then(r => r.json())
                .then(data => {
                    const monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
                        "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

                    const labels = data.map(d => monthNames[d.month - 1]);
                    const values = data.map(d => d.count);

                    const ctx = document.getElementById('leaveMonthlyChart');

                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Total Leaves',
                                data: values,
                                fill: false,
                                tension: 0.3
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'top'
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        precision: 0
                                    }
                                }
                            }
                        }
                    });
                });
        });
    </script>
   
