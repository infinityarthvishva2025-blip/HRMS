        padding: 10px 12px;
        font-size: 0.95rem;
    }

    textarea.form-control {
        height: 110px !important;
    }

    .total-box {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        font-size: 1.4rem;
        font-weight: 600;
        text-align: center;
        background: #fafafa;
        color: #2a2a2a;
    }

    .leave-row {
        margin-bottom: 25px;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 12px 34px;
        font-size: 1.1rem;
    }


   
    @@media (max-width: 1024px) {
        .leave-card

    {
        padding: 25px;
        max-width: 90%;
    }

    }


    
    @@media (max-width: 768px) {
        .leave-card

    {
        padding: 20px;
        max-width: 95%;
        margin-top: 10px;
    }

    .leave-title {
        font-size: 1.3rem;
        text-align: center;
    }

    .total-box {
        font-size: 1.1rem;
        padding: 12px;
    }

    .btn-primary {
        width: 100%;
        padding: 12px 0;
        font-size: 1rem;
    }

    .row.leave-row {
        flex-direction: column;
    }

    #fullOrMultiDayBlock,
    #halfDayBlock,
    #timeBlock {
        flex-direction: column !important;
    }

        #fullOrMultiDayBlock .col-md-6,
        #halfDayBlock .col-md-6,
        #timeBlock .col-md-6 {
            width: 100% !important;
            margin-bottom: 12px;
        }

    }


   
    @@media (max-width: 480px) {
        .leave-card

    {
        padding: 15px;
    }

    .leave-title {
        font-size: 1.1rem;
    }

    .total-box {
        font-size: 1rem;
    }

    label.form-label {
        font-size: 0.88rem;
    }

    }
</style>

