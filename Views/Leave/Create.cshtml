@model HRMS.Models.Leave

@{
    ViewData["Title"] = "Apply for Leave";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<style>


    .leave-card {
        border-radius: 16px;
        background: #fff;
        padding: 35px;
        margin: 20px auto;
        margin-bottom: 40px;
        max-width: 650px; /* Centers content on desktop */
        width: 100%;
        box-shadow: 0 3px 18px rgba(0,0,0,0.1);
    }

    .leave-title {
        font-size: 1.6rem;
        font-weight: 600;
        color: #222;
        margin-bottom: 10px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control,
    .form-select {
        border-radius: 8px !important;
        padding: 10px 12px;
        font-size: 0.95rem;
    }

    textarea.form-control {
        height: 110px !important;
    }

    .total-box {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        font-size: 1.4rem;
        font-weight: 600;
        text-align: center;
        background: #fafafa;
        color: #2a2a2a;
    }

    .leave-row {
        margin-bottom: 25px;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 12px 34px;
        font-size: 1.1rem;
    }


   
    @@media (max-width: 1024px) {
        .leave-card

    {
        padding: 25px;
        max-width: 90%;
    }

    }


    
    @@media (max-width: 768px) {
        .leave-card

    {
        padding: 20px;
        max-width: 95%;
        margin-top: 10px;
    }

    .leave-title {
        font-size: 1.3rem;
        text-align: center;
    }

    .total-box {
        font-size: 1.1rem;
        padding: 12px;
    }

    .btn-primary {
        width: 100%;
        padding: 12px 0;
        font-size: 1rem;
    }

    .row.leave-row {
        flex-direction: column;
    }

    #fullOrMultiDayBlock,
    #halfDayBlock,
    #timeBlock {
        flex-direction: column !important;
    }

        #fullOrMultiDayBlock .col-md-6,
        #halfDayBlock .col-md-6,
        #timeBlock .col-md-6 {
            width: 100% !important;
            margin-bottom: 12px;
        }

    }


   
    @@media (max-width: 480px) {
        .leave-card

    {
        padding: 15px;
    }

    .leave-title {
        font-size: 1.1rem;
    }

    .total-box {
        font-size: 1rem;
    }

    label.form-label {
        font-size: 0.88rem;
    }

    }
</style>

<!-- ===================== PAGE CONTAINER ===================== -->
<div class="container">

    <div class="leave-card">

        <div class="leave-title">Apply for Leave</div>
        <hr />

        <form asp-action="Create" asp-controller="Leave" method="post">

            <!-- Category + Type -->
            <div class="row leave-row">
                <div class="col-md-6 col-12">
                    <label class="form-label">Leave Category</label>
                    <select asp-for="Category" class="form-select" id="Category">
                        <option value="">-- Select --</option>
                        <option value="FullDay">Full Day</option>
                        <option value="MultiDay">More Than 1 Day</option>
                        <option value="HalfDay">Half Day</option>
                        <option value="EarlyGoing">Early Going</option>
                        <option value="LateComing">Late Coming</option>
                    </select>
                </div>

                <div id="leaveTypeBlock" class="col-md-6 col-12" style="display:none;">
                    <label class="form-label">Leave Type</label>
                    <select asp-for="LeaveType" class="form-select">
                        <option value="">-- Select Leave Type --</option>
                        <option value="Sick">Sick Leave</option>
                        <option value="Casual">Casual Leave</option>
                        <option value="coff">Comp-Off</option>
                    </select>
                </div>
            </div>

            <!-- Full/Multi Day -->
            <div id="fullOrMultiDayBlock" class="row leave-row" style="display:none;">
                <div class="col-md-6 col-12">
                    <label class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
            </div>

            <!-- Half Day -->
            <div id="halfDayBlock" class="row leave-row" style="display:none;">
                <div class="col-md-6 col-12">
                    <label class="form-label">Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">Session</label>
                    <select asp-for="HalfDaySession" class="form-select">
                        <option value="">-- Select --</option>
                        <option value="FirstHalf">First Half</option>
                        <option value="SecondHalf">Second Half</option>
                    </select>
                </div>
            </div>

            <!-- Early / Late -->
            <div id="timeBlock" class="row leave-row" style="display:none;">
                <div class="col-md-6 col-12">
                    <label class="form-label">Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">Time</label>
                    <input asp-for="TimeValue" type="time" class="form-control" />
                </div>
            </div>

            <!-- Reason + Total Days -->
            <div class="row leave-row">
                <div class="col-md-6 col-12">
                    <label class="form-label">Reason</label>
                    <textarea asp-for="Reason" class="form-control"></textarea>
                </div>

                <div id="totalDaysBlock" class="col-md-3 col-12 mt-3" style="display:none;">
                    <label class="form-label">Total Days</label>
                    <div class="total-box">@Model.TotalDays</div>
                    <input asp-for="TotalDays" type="hidden" />
                </div>
            </div>

            <!-- Contact + Address -->
            <div class="row leave-row" style="display:none;">
                <div class="col-md-6 col-12">
                    <label class="form-label">Contact During Leave</label>
                    <input asp-for="ContactDuringLeave" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">Address During Leave</label>
                    <input asp-for="AddressDuringLeave" class="form-control" />
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">Submit Leave</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // Elements
            const catSelect = document.getElementById("Category");
            const fullMulti = document.getElementById("fullOrMultiDayBlock");
            const half = document.getElementById("halfDayBlock");
            const timeBlock = document.getElementById("timeBlock");
            const leaveTypeBlock = document.getElementById("leaveTypeBlock");
            const totalDaysBlock = document.getElementById("totalDaysBlock");
            const totalBox = totalDaysBlock?.querySelector(".total-box");
            const totalInput = document.querySelector("[name='TotalDays']");
            const startInput = document.querySelector("[name='StartDate']");
            const endInput = document.querySelector("[name='EndDate']");

            // ======= NATIONAL HOLIDAYS =========
            const nationalHolidays = [
                "2025-01-26",
                "2025-08-15",
                "2025-10-02",
                "2025-12-25"
            ];

            // ======= TOGGLE BLOCKS BASED ON CATEGORY =========
            function updateBlocks() {
                fullMulti.style.display = "none";
                half.style.display = "none";
                timeBlock.style.display = "none";
                leaveTypeBlock.style.display = "none";
                totalDaysBlock.style.display = "none";

                if (catSelect.value === "FullDay" || catSelect.value === "MultiDay") {
                    fullMulti.style.display = "flex";
                    leaveTypeBlock.style.display = "flex";
                    totalDaysBlock.style.display = "block";
                } else if (catSelect.value === "HalfDay") {
                    half.style.display = "flex";
                } else if (catSelect.value === "EarlyGoing" || catSelect.value === "LateComing") {
                    timeBlock.style.display = "flex";
                }

                // trigger count when changing to Full/Multi Day
                if (catSelect.value === "FullDay" || catSelect.value === "MultiDay") {
                    updateTotalDays();
                }
            }

            catSelect.addEventListener("change", updateBlocks);
            updateBlocks();

            // ======= VALIDATION FOR INVALID DATES =========
            function validateLeaveDate(input) {
                let dateValue = input.value;
                if (!dateValue) return;

                let picked = new Date(dateValue + "T00:00:00");
                let day = picked.getDay(); // 0 = Sunday, 6 = Saturday

                if (day === 0) {
                    alert("❌ You cannot apply leave on Sunday (Weekly Off).");
                    input.value = "";
                    updateTotalDays();
                    return;
                }

                if (nationalHolidays.includes(dateValue)) {
                    alert("❌ You cannot apply leave on a National Holiday.");
                    input.value = "";
                    updateTotalDays();
                    return;
                }
            }

            // ======= TOTAL DAYS CALCULATION =========
            function updateTotalDays() {
                if (!startInput || !endInput || !totalBox || !totalInput) return;

                const startVal = startInput.value;
                const endVal = endInput.value;

                if (startVal && endVal) {
                    const start = new Date(startVal);
                    const end = new Date(endVal);

                    if (end < start) {
                        alert("❌ End date cannot be before Start date.");
                        endInput.value = "";
                        totalBox.textContent = "0";
                        totalInput.value = 0;
                        return;
                    }

                    let totalDays = 0;

                    // Loop through all days from start to end
                    for (let d = new Date(start); d <= end; d.setDate(d.getDate() + 1)) {
                        const dateStr = d.toISOString().split('T')[0];
                        const day = d.getDay();

                        // skip Sundays and national holidays
                        if (day !== 0 && !nationalHolidays.includes(dateStr)) {
                            totalDays++;
                        }
                    }

                    totalBox.textContent = totalDays;
                    totalInput.value = totalDays;
                } else {
                    totalBox.textContent = "0";
                    totalInput.value = 0;
                }
            }

            // Attach validation & counting on input changes
            if (startInput)
                startInput.addEventListener("change", function () {
                    validateLeaveDate(startInput);
                    updateTotalDays();
                });

            if (endInput)
                endInput.addEventListener("change", function () {
                    validateLeaveDate(endInput);
                    updateTotalDays();
                });

            // Trigger count once on page load (for already selected values)
            updateTotalDays();
        });
    </script>
}

