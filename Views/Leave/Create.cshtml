<!-- ===================== PAGE CONTAINER ===================== -->
<div class="container">

    <div class="leave-card">

        <div class="leave-title">Apply for Leave</div>
        <hr />

        <form asp-action="Create" asp-controller="Leave" method="post">

            <!-- Category + Type -->
            <div class="row leave-row">
                <div class="col-md-6 col-12">
                    <label class="form-label">Leave Category</label>
                    <select asp-for="Category" class="form-select" id="Category">
                        <option value="">-- Select --</option>
                        <option value="FullDay">Full Day</option>
                        <option value="MultiDay">More Than 1 Day</option>
                        <option value="HalfDay">Half Day</option>
                        <option value="EarlyGoing">Early Going</option>
                        <option value="LateComing">Late Coming</option>
                    </select>
                </div>

                <div id="leaveTypeBlock" class="col-md-6 col-12" style="display:none;">
                    <label class="form-label">Leave Type</label>
                    <select asp-for="LeaveType" class="form-select">
                        <option value="">-- Select Leave Type --</option>
                        <option value="Sick">Sick Leave</option>
                        <option value="Casual">Casual Leave</option>
                        <option value="Paid">Public Holidays</option>
                    </select>
                </div>
            </div>

            <!-- Full/Multi Day -->
            <div id="fullOrMultiDayBlock" class="row leave-row" style="display:none;">
                <div class="col-md-6 col-12">
                    <label class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
            </div>

            <!-- Half Day -->
            <div id="halfDayBlock" class="row leave-row" style="display:none;">
                <div class="col-md-6 col-12">
                    <label class="form-label">Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">Session</label>
                    <select asp-for="HalfDaySession" class="form-select">
                        <option value="">-- Select --</option>
                        <option value="FirstHalf">First Half</option>
                        <option value="SecondHalf">Second Half</option>
                    </select>
                </div>
            </div>

            <!-- Early / Late -->
            <div id="timeBlock" class="row leave-row" style="display:none;">
                <div class="col-md-6 col-12">
                    <label class="form-label">Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">Time</label>
                    <input asp-for="TimeValue" type="time" class="form-control" />
                </div>
            </div>

            <!-- Reason + Total Days -->
            <div class="row leave-row">
                <div class="col-md-6 col-12">
                    <label class="form-label">Reason</label>
                    <textarea asp-for="Reason" class="form-control"></textarea>
                </div>

                <div id="totalDaysBlock" class="col-md-3 col-12 mt-3" style="display:none;">
                    <label class="form-label">Total Days</label>
                    <div class="total-box">@Model.TotalDays</div>
                    <input asp-for="TotalDays" type="hidden" />
                </div>
            </div>

            <!-- Contact + Address -->
            <div class="row leave-row">
                <div class="col-md-6 col-12">
                    <label class="form-label">Contact During Leave</label>
                    <input asp-for="ContactDuringLeave" class="form-control" />
                </div>

                <div class="col-md-6 col-12">
                    <label class="form-label">Address During Leave</label>
                    <input asp-for="AddressDuringLeave" class="form-control" />
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">Submit Leave</button>
            </div>

        </form>

    </div>
</div>


<!-- ============ JAVASCRIPT ============ -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const catSelect = document.getElementById("Category");
            const fullMulti = document.getElementById("fullOrMultiDayBlock");
            const half = document.getElementById("halfDayBlock");
            const timeBlock = document.getElementById("timeBlock");
            const leaveTypeBlock = document.getElementById("leaveTypeBlock");
            const totalDaysBlock = document.getElementById("totalDaysBlock");

            function updateBlocks() {

                fullMulti.style.display = "none";
                half.style.display = "none";
                timeBlock.style.display = "none";
                leaveTypeBlock.style.display = "none";
                totalDaysBlock.style.display = "none";

                if (catSelect.value === "FullDay" || catSelect.value === "MultiDay") {
                    fullMulti.style.display = "flex";
                    leaveTypeBlock.style.display = "flex";
                    totalDaysBlock.style.display = "block";
                }
                else if (catSelect.value === "HalfDay") {
                    half.style.display = "flex";
                }
                else if (catSelect.value === "EarlyGoing" || catSelect.value === "LateComing") {
                    timeBlock.style.display = "flex";
                }
            }

            catSelect.addEventListener("change", updateBlocks);
            updateBlocks();
        });
                document.addEventListener("DOMContentLoaded", function () {

            // Get StartDate input
            const startDateInput = document.querySelector("[name='StartDate']");

            // Get EndDate input
            const endDateInput = document.querySelector("[name='EndDate']");

            // CALL VALIDATION WHEN USER CHANGES START DATE
            if (startDateInput) {
                startDateInput.addEventListener("change", function () {
                    validateLeaveDate(startDateInput);
                });
            }

            // CALL VALIDATION WHEN USER CHANGES END DATE
            if (endDateInput) {
                endDateInput.addEventListener("change", function () {
                    validateLeaveDate(endDateInput);
                });
            }

        });


           
        // ============================
        // NATIONAL HOLIDAYS (EDITABLE)
        // ============================
        const nationalHolidays = [
            "2025-01-26",
            "2025-08-15",
            "2025-10-02",
            "2025-12-25"
            // Add more yyyy-mm-dd
        ];

        // ============================
        // VALIDATE WEEKLY OFF + HOLIDAYS
        // ============================
        function validateLeaveDate(input) {

            let dateValue = input.value;
            if (!dateValue) return;

            let picked = new Date(dateValue + "T00:00:00");
            let day = picked.getDay(); // 0 = Sunday, 6 = Saturday

            // 1️⃣ SUNDAY NOT ALLOWED
            if (day === 0) {
                alert("❌ You cannot apply leave on Sunday (Weekly Off).");
                input.value = "";
                return;
            }

            // 2️⃣ SATURDAY NOT ALLOWED (If you want weekly off Saturday)
            // Uncomment below if Saturday should also be blocked
            /*
            if (day === 6) {
                alert("❌ You cannot apply leave on Saturday (Weekly Off).");
                input.value = "";
                return;
            }
            */

            // 3️⃣ NATIONAL HOLIDAY NOT ALLOWED
            if (nationalHolidays.includes(dateValue)) {
                alert("❌ You cannot apply leave on a National Holiday.");
                input.value = "";
                return;
            }
        }

        // Attach validation to StartDate & EndDate
        document.addEventListener("DOMContentLoaded", function () {

            const startDateInput = document.querySelector("[name='StartDate']");
            const endDateInput = document.querySelector("[name='EndDate']");

            if (startDateInput)
                startDateInput.addEventListener("change", function () {
                    validateLeaveDate(startDateInput);
                });

            if (endDateInput)
                endDateInput.addEventListener("change", function () {
                    validateLeaveDate(endDateInput);
                });
        });

   

    </script>
}

