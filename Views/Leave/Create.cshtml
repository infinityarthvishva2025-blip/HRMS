@model HRMS.Models.Leave

@{
    ViewData["Title"] = "Apply for Leave";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<style>


    .leave-card {
        border-radius: 16px;
        background: #fff;
        padding: 35px;
        margin: 20px auto;
        margin-bottom: 40px;
        max-width: 650px; /* Centers content on desktop */
        width: 100%;
        box-shadow: 0 3px 18px rgba(0,0,0,0.1);
    }

    .leave-title {
        font-size: 1.6rem;
        font-weight: 600;
        color: #222;
        margin-bottom: 10px;
    }

