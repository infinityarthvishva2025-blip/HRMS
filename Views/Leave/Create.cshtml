@model HRMS.Models.Leave
@{
    ViewData["Title"] = "Apply for Leave";
}

<h2 class="fw-bold mb-3">Apply for Leave</h2>

<form asp-action="Create" method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label asp-for="LeaveType" class="form-label"></label>
        <select asp-for="LeaveType" class="form-select">
            <option value="">-- Select Leave Type --</option>
            <option>Casual Leave</option>
            <option>Sick Leave</option>
            <option>Paid Leave</option>
        </select>
        <span asp-validation-for="LeaveType" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label"></label>
        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success px-4">Submit</button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
