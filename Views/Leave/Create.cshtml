@model Leave

@{
    ViewData["Title"] = "Apply for Leave";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">

    <h3>Apply for Leave</h3>
    <hr />

    <form asp-action="Create" method="post">

        <div class="col-md-4 mb-3">
            <label>Leave Category</label>
            <select asp-for="Category" class="form-control">
                <option value="FullDay">Full Day</option>
                <option value="MultiDay">More Than 1 Day</option>
                <option value="HalfDay">Half Day</option>
                <option value="EarlyGoing">Early Going</option>
                <option value="LateComing">Late Coming</option>
            </select>
        </div>

        <div class="row">

            <!-- START DATE -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Start Date</label>
                <input asp-for="StartDate"
                       type="date"
                       class="form-control"
                       value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <!-- END DATE -->
            <div class="col-md-6 mb-3">
                <label class="form-label">End Date</label>
                <input asp-for="EndDate"
                       type="date"
                       class="form-control"
                       value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

        </div>

        <div class="col-md-4 mb-3">
            <label>Reason</label>
            <textarea asp-for="Reason" class="form-control"></textarea>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label>Contact During Leave</label>
                <input asp-for="ContactDuringLeave" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label>Address During Leave</label>
                <input asp-for="AddressDuringLeave" class="form-control" />
            </div>
        </div>

        <div class="col-md-3 mb-3 text-center">
            <button type="submit" class="btn btn-primary w-100">Submit Leave</button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
