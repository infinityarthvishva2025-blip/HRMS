@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
             const catSelect = document.getElementById("Category");
            const category = document.getElementById("Category");
            const leaveType = document.getElementById("LeaveType");

            const leaveTypeBlock = document.getElementById("leaveTypeBlock");
            const fullMulti = document.getElementById("fullOrMultiDayBlock");
            const half = document.getElementById("halfDayBlock");
            const totalDaysBlock = document.getElementById("totalDaysBlock");

            const startInput = document.getElementById("StartDate");
            const endInput = document.getElementById("EndDate");
            const totalBox = document.querySelector(".total-box");
            const totalHidden = document.querySelector("[name='TotalDays']");

            // Comp-Off balance from controller
            let compOffBalance = @ViewBag.CompOffBalance;
            document.getElementById("coffBal").innerText = compOffBalance;

            const coffBalanceText = document.getElementById("coffBalanceText");

            // National Holidays
            const holidays = ["2025-01-26", "2025-08-15", "2025-10-02", "2025-12-25"];

            // --------------------- UPDATE VIEW BLOCKS ------------------------
          
               // ======= TOGGLE BLOCKS BASED ON CATEGORY =========
            function updateBlocks() {
                fullMulti.style.display = "none";
                half.style.display = "none";
                timeBlock.style.display = "none";
                leaveTypeBlock.style.display = "none";
                totalDaysBlock.style.display = "none";

                if (catSelect.value === "FullDay" || catSelect.value === "MultiDay") {
                    fullMulti.style.display = "flex";
                    leaveTypeBlock.style.display = "flex";
                    totalDaysBlock.style.display = "block";
                } else if (catSelect.value === "HalfDay") {
                    half.style.display = "flex";
                } else if (catSelect.value === "EarlyGoing" || catSelect.value === "LateComing") {
                    timeBlock.style.display = "flex";
                }

                // trigger count when changing to Full/Multi Day
                if (catSelect.value === "FullDay" || catSelect.value === "MultiDay") {
                    updateTotalDays();
                }
            }


            category.addEventListener("change", updateBlocks);
            updateBlocks();

            // --------------------- LEAVE TYPE CHANGE ------------------------
            leaveType.addEventListener("change", function () {
                if (leaveType.value === "coff") {
                    coffBalanceText.style.display = "block";
                } else {
                    coffBalanceText.style.display = "none";
                }
                updateTotalDays();
            });

            // --------------------- VALIDATE DATE -----------------------------
            function validateDate(input) {
                let val = input.value;
                if (!val) return;

                let dt = new Date(val);
                if (dt.getDay() === 0) {
                    alert("❌ Cannot apply leave on Sunday!");
                    input.value = "";
                }
                if (holidays.includes(val)) {
                    alert("❌ Cannot apply leave on National Holiday!");
                    input.value = "";
                }
            }

            // --------------------- TOTAL DAY LOGIC --------------------------
            function updateTotalDays() {

                if (!startInput.value || !endInput.value) return;

                let s = new Date(startInput.value);
                let e = new Date(endInput.value);

                if (e < s) {
                    alert("❌ End date cannot be before start date.");
                    endInput.value = "";
                    return;
                }

                let count = 0;
                for (let d = new Date(s); d <= e; d.setDate(d.getDate() + 1)) {
                    let ds = d.toISOString().split("T")[0];
                    if (d.getDay() !== 0 && !holidays.includes(ds)) {
                        count++;
                    }
                }

                totalBox.innerText = count;
                totalHidden.value = count;

                // Comp-Off rule
                if (leaveType.value === "coff") {
                    if (count > compOffBalance) {
                        alert("❌ Not enough Comp-Off balance!");
                        endInput.value = "";
                        totalBox.innerText = 0;
                        totalHidden.value = 0;
                    }
                }
            }

            startInput.addEventListener("change", function () {
                validateDate(startInput);
                updateTotalDays();
            });

            endInput.addEventListener("change", function () {
                validateDate(endInput);
                updateTotalDays();
            });

        });
    </script>
}

