@model IEnumerable<HRMS.Models.Leave>
@{
    ViewData["Title"] = "Leave Requests";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary mb-0">Leave Requests</h2>
            <a asp-action="Create" class="btn btn-success shadow-sm">
                <i class="fa-solid fa-plus me-1"></i> Add Leave
            </a>
        </div>

        <!-- Leave Requests Table -->
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light text-center">
                <tr>
                    <th>Leave Type</th>
                    <th>Date(s)</th>
                    <th>Half Day Type</th>
                    <th>Reason</th>
                    <th>Employee Code</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var leave in Model)
                {
                    <tr>
                        <td>@leave.LeaveType</td>

                        <td>
                            @if (leave.LeaveType == "Half Day Leave" && leave.LeaveDate != null)
                            {
                                @leave.LeaveDate?.ToString("dd-MM-yyyy")
                            }
                            else if (leave.FromDate != null && leave.ToDate != null)
                            {
                                @($"{leave.FromDate:dd-MM-yyyy} to {leave.ToDate:dd-MM-yyyy}")
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>

                        <td>
                            @if (leave.LeaveType == "Half Day Leave" && leave.HalfDayType != HRMS.Models.HalfDayType.None)
                            {
                                @leave.HalfDayType
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>

                        <td>@leave.Reason</td>
                        <td>@leave.EmployeeCode</td>
                        <td>@leave.Status</td>

                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@leave.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@leave.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this leave request?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-success {
        background: linear-gradient(90deg, #009688, #0077c2);
        border: none;
        transition: all 0.25s ease;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
        }

    .card {
        border-radius: 10px;
    }

    table th, table td {
        vertical-align: middle;
    }
</style>
