@model IEnumerable<HRMS.Models.Leave>
@{
    ViewData["Title"] = "Leave Requests";
}

<h2 class="fw-bold mb-3">Leave Requests</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Apply for Leave</a>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Start</th>
            <th>End</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="7" class="text-center text-muted">No leave records found.</td></tr>
        }
        else
        {
            @foreach (var leave in Model)
            {
                <tr>
                    <td>@leave.Id</td>
                    <td>@leave.LeaveType</td>
                    <td>@leave.StartDate.ToShortDateString()</td>
                    <td>@leave.EndDate.ToShortDateString()</td>
                    <td>@leave.Reason</td>
                    <td>@leave.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@leave.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@leave.Id" class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Are you sure you want to delete this leave?');">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
