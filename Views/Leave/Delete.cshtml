@model HRMS.Models.Leave

<h2>Delete Leave Request</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this leave request?</p>
</div>

<table class="table table-bordered">
    <tr><th>Leave Type</th><td>@Model.LeaveType</td></tr>
    <tr><th>Start Date</th><td>@Model.StartDate.ToShortDateString()</td></tr>
    <tr><th>End Date</th><td>@Model.EndDate.ToShortDateString()</td></tr>
    <tr><th>Reason</th><td>@Model.Reason</td></tr>
    <tr><th>Status</th><td>@Model.Status</td></tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
