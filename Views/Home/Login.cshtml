@model HRMS.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Infinity Arthvishva | HRMS Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #2076C7, #1CADA3);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-wrapper {
            display: flex;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            max-width: 900px;
            width: 90%;
        }

        /* Left Side */
        .login-left {
            flex: 1;
            background: #ffffff;
            color: #003366;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 40px 30px;
            position: relative;
        }

        .company-logo {
            width: 220px;
            margin-bottom: 25px;
            filter: drop-shadow(0 3px 8px rgba(0,0,0,0.2));
        }

        .login-left h1 {
            font-size: 26px;
            margin-top: 10px;
            color: #0077c2;
        }

        .login-left p {
            color: #444;
            font-size: 14px;
            line-height: 1.6;
        }

        /* Right Side */
        .login-right {
            flex: 1;
            padding: 40px 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #ffffff;
        }

        .login-box {
            width: 100%;
            max-width: 340px;
        }

            .login-box h2 {
                text-align: center;
                color: #0d47a1;
                margin-bottom: 25px;
            }

        .logo-round {
            background: #0d47a1;
            color: white;
            border-radius: 50%;
            padding: 6px 12px;
            font-weight: bold;
            margin-right: 8px;
        }

        .input-group {
            position: relative;
            margin-bottom: 15px;
        }

            .input-group input {
                width: 100%;
                padding: 10px 35px 10px 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                outline: none;
                transition: 0.2s;
            }

                .input-group input:focus {
                    border-color: #009688;
                    box-shadow: 0 0 5px rgba(0, 150, 136, 0.4);
                }

        .options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            margin-bottom: 20px;
            gap: 10px;
        }

            .options label {
                display: flex;
                align-items: center;
                gap: 5px;
                white-space: nowrap;
            }

            .options a {
                text-decoration: none;
                color: #0077c2;
                font-weight: 500;
                transition: color 0.2s ease;
            }

                .options a:hover {
                    color: #009688;
                }

        .btn-login {
            width: 100%;
            background: linear-gradient(to right, #0077c2, #009688);
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-login:hover {
                opacity: 0.9;
            }

        @@media (max-width: 768px) {
            .login-wrapper {
                flex-direction: column;
                max-width: 95%;
            }

            .login-left {
                padding: 25px 20px;
            }

                .login-left img {
                    width: 140px;
                }
        }
    </style>
</head>

<body>
    <div class="login-wrapper">
        <!-- LEFT PANEL -->
        <div class="login-left">
            <img src="~/images/infinity-logo.png" alt="Infinity Arthvishva Logo" class="company-logo" />
            <h1>Welcome to HRMS</h1>
            <p>Manage your HR operations efficiently with Infinity Arthvishva’s HRMS platform.</p>
            <small>© 2025 Infinity Arthvishva | All Rights Reserved</small>
        </div>

        <!-- RIGHT PANEL -->
        <div class="login-right">
            <div class="login-box">
                <h2><span class="logo-round">R</span> LOGIN</h2>

                <form asp-action="Login" method="post">
                    <div class="input-group">
                        <input asp-for="UserId" placeholder="Enter HR ID or Employee Code" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Password" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="options">
                        <label><input type="checkbox" /> Remember me</label>
                        <a href="#">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn-login">LOGIN</button>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                    }
                </form>
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
