@model HRMS.Models.CelebrationViewModel
@using HRMS.Models.ViewModels
@using System.Linq

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_HrLayout.cshtml";

    var recentEmployees = ViewBag.RecentEmployees as List<RecentEmployeeViewModel>
                          ?? new List<RecentEmployeeViewModel>();
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<h2 class="fw-bold mb-4 page-title">HR Dashboard</h2>

<div class="dashboard-header text-center mb-5">
    <h2 class="welcome-title mb-2">
        <i class="fa-solid fa-hand-wave text-warning me-2"></i>
        Welcome, @Model.Employee.Name
    </h2>
    <p class="lead text-white">Your personalized work summary & attendance panel</p>

    <div class="mt-4 text-center">

        <a href="/Attendance/EmployeePanel"
           class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold">
            <i class="fa-solid fa-calendar-check me-2"></i> Mark Attendance
        </a>

        <a asp-controller="Attendance" asp-action="EmployeeSummary"
           asp-route-employeeId="@Model.Employee.Id"
           class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold">
            <i class="fa-solid fa-chart-line me-2"></i> Attendance Summary
        </a>

        <a asp-controller="Leave" asp-action="Create"
           class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold">
            <i class="fa-solid fa-paper-plane me-2"></i> Apply Leave
        </a>
        <button type="button"
                class="dash-btn"
                data-bs-toggle="modal"
                data-bs-target="#salarySlipModal">
            <i class="fa-solid fa-file-invoice-dollar me-2"></i> View Salary Slip
        </button>
       @*  <button type="button"
                class="btn btn-light shadow mx-2 px-4 py-2 rounded-pill fw-semibold"
                data-bs-toggle="modal"
                data-bs-target="#salarySlipModal">
            <i class="fa-solid fa-file-invoice-dollar me-2"></i> View Salary Slip
        </button> *@

    </div>

</div>
<!-- ======================= SUMMARY CARDS ======================= -->
<div class="row g-3">
    @* Total Employees *@
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
        <div class="summary-card">
            <i class="fa-solid fa-users icon primary"></i>
            <h4>@Model.TotalEmployees</h4>
            <span>Total Employees</span>
        </div>
    </div>

    @* Present *@
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
        <div class="summary-card">
            <i class="fa-solid fa-user-check icon secondary"></i>
            <h4>@((int?)ViewBag.PresentToday ?? 0)</h4>
            <span>Today's Present</span>
        </div>
    </div>

    @* Absent *@
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
        <div class="summary-card">
            <i class="fa-solid fa-user-xmark icon danger"></i>
            <h4>@((int?)ViewBag.AbsentToday ?? 0)</h4>
            <span>Today's Absent</span>
        </div>
    </div>

    @* Not Checked Out *@
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
        <div class="summary-card">
            <i class="fa-solid fa-clock-rotate-left icon accent"></i>
            <h4>@((int?)ViewBag.NotCheckedOutToday ?? 0)</h4>
            <span>Not Checked-Out</span>
        </div>
    </div>
</div>


<!-- ======================= QUICK ACTIONS ======================= -->
<div class="card custom-card mt-4">
    <div class="card-header custom-header">
        <i class="fa-solid fa-bolt me-2 text-accent"></i> Quick Actions
    </div>

    <div class="card-body">
        <div class="d-flex flex-wrap gap-3 justify-content-start">
            <a asp-controller="Employees" asp-action="Create" class="btn custom-btn-primary">
                <i class="fa-solid fa-user-plus"></i> Add Employee
            </a>

            <a asp-controller="Employees" asp-action="Index" class="btn custom-btn-secondary">
                <i class="fa-solid fa-list"></i> View Employees
            </a>

            <a asp-controller="Attendance" asp-action="Index" class="btn custom-btn-info">
                <i class="fa-solid fa-calendar-check"></i> Attendance Report
            </a>

            <a asp-controller="Leave" asp-action="ManagerApprovalList" class="btn custom-btn-outline-primary">
                <i class="fa-solid fa-plane-departure"></i> Manage Leaves
            </a>

            <a asp-controller="Reports" asp-action="Index" class="btn custom-btn-outline-dark">
                <i class="fa-solid fa-chart-bar"></i> Reports
            </a>
        </div>
    </div>
</div>


<!-- ======================= CELEBRATIONS + CHART ======================= -->
<div class="row mt-4 g-4">

    <!-- Celebrations -->
    <div class="col-lg-6 col-md-12">
        <div class="card custom-card h-100">
            <div class="card-header custom-header">🎉 Celebrations</div>

            <div class="card-body">
                <div class="row">

                    <!-- Today's -->
                    <div class="col-md-6 border-end celebration-box">
                        <h6 class="section-title primary-text">Today's Celebrations</h6>

                        @if ((Model?.TodaysBirthdays?.Any() ?? false) || (Model?.TodaysAnniversaries?.Any() ?? false))
                        {
                            @foreach (var emp in Model.TodaysBirthdays.Take(3))
                            {
                                <div class="cele-item">
                                    <div class="cele-icon bg-danger"><i class="fa-solid fa-cake-candles"></i></div>
                                    <div>
                                        <strong>@emp.Name</strong>
                                        <div class="text-muted small">Birthday Today 🎂</div>
                                    </div>
                                </div>
                            }

                            @foreach (var emp in Model.TodaysAnniversaries.Take(3))
                            {
                                <div class="cele-item">
                                    <div class="cele-icon bg-secondary"><i class="fa-solid fa-briefcase"></i></div>
                                    <div>
                                        <strong>@emp.Name</strong>
                                        <div class="text-muted small">Joining Anniversary 🎉</div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-muted">No celebrations today 🎈</div>
                        }
                    </div>

                    <!-- Tomorrow -->
                    <div class="col-md-6 celebration-box">
                        <h6 class="section-title secondary-text">Tomorrow's Celebrations</h6>

                        @if ((Model?.TomorrowsBirthdays?.Any() ?? false) || (Model?.TomorrowsAnniversaries?.Any() ?? false))
                        {
                            @foreach (var emp in Model.TomorrowsBirthdays.Take(3))
                            {
                                <div class="cele-item">
                                    <div class="cele-icon bg-danger"><i class="fa-solid fa-cake-candles"></i></div>
                                    <div>
                                        <strong>@emp.Name</strong>
                                        <div class="text-muted small">Birthday Tomorrow 🎂</div>
                                    </div>
                                </div>
                            }

                            @foreach (var emp in Model.TomorrowsAnniversaries.Take(3))
                            {
                                <div class="cele-item">
                                    <div class="cele-icon bg-secondary"><i class="fa-solid fa-briefcase"></i></div>
                                    <div>
                                        <strong>@emp.Name</strong>
                                        <div class="text-muted small">Joining Anniversary 🎊</div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-muted">No celebrations tomorrow 🎉</div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>


    <!-- Department Chart -->
    <div class="col-lg-6 col-md-12">
        <div class="card custom-card h-100">
            <div class="card-header custom-header">Employee Distribution by Department</div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <div class="w-100">
                    <canvas id="deptChart"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>


<!-- ======================= RECENT EMPLOYEES ======================= -->
<div class="card custom-card mt-4">
    <div class="card-header custom-header d-flex justify-content-between">
        <span><i class="fa-solid fa-users me-2 text-primary"></i> Recent Employees</span>
        <a asp-controller="Employees" asp-action="Index" class="btn btn-sm custom-btn-outline-primary">View All</a>
    </div>

    <div class="card-body p-0 table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Position</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>
                @if (!recentEmployees.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-3 text-danger fw-bold">
                            No recent employees found.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in recentEmployees)
                    {
                        var emp = item.Employee;
                        var att = item.Attendance;

                        <tr>
                            <td>@emp.EmployeeCode</td>
                            <td>@emp.Name</td>
                            <td>@emp.Department</td>
                            <td>@emp.Position</td>

                            <td>
                                @if (att == null)
                                {
                                    <span class="badge bg-danger">Absent</span>
                                }
                                else if (att.OutTime == null)
                                {
                                    <span class="badge bg-warning text-dark">Not Checked Out</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- =========================================================== -->
<!--     SALARY SLIP MODAL (NO CHANGES NEEDED)                  -->
<!-- =========================================================== -->

<div class="modal fade" id="salarySlipModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fa-solid fa-file-invoice-dollar me-2"></i> Select Month & Year
                </h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="salarySlipForm">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Month</label>
                        <select id="month" class="form-select" required>
                            <option value="">-- Select Month --</option>
                            @for (int m = 1; m <= 12; m++)
                            {
                                <option value="@m">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Year</label>
                        <select id="year" class="form-select" required>
                            <option value="">-- Select Year --</option>
                            @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                            {
                                <option value="@y">@y</option>
                            }
                        </select>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-4 rounded-pill">
                            <i class="fa-solid fa-search me-2"></i> Show Salary Slip
                        </button>
                    </div>
                </form>
            </div>

            <div class="modal-footer justify-content-center d-none" id="salarySlipResult">
                <a id="downloadSlipBtn"
                   class="btn btn-gradient-primary px-4 py-2 rounded-pill shadow-sm"
                   target="_blank">
                    <i class="fa-solid fa-download me-2"></i> Download Salary Slip
                </a>
            </div>
        </div>
    </div>
</div>



<!-- ======================= CHART JS ======================= -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('deptChart');
    const departmentLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DepartmentLabels));
    const departmentValues = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DepartmentValues));

    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: departmentLabels,
            datasets: [{
                data: departmentValues,
                backgroundColor: ['#2F3D88', '#0E8376', '#F9A826', '#4455AA', '#18A08D'],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: 'bottom' } },
            cutout: '65%'
        }
    });
</script>


