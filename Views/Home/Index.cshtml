@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 text-center">
            <div class="card-body">
                <i class="fa-solid fa-users fa-2x text-primary mb-2"></i>
                <h4 class="fw-bold mb-0">47</h4>
                <small>Total Employees</small>
            </div>
        </div>
    </div>

